// Example: Using Content Collections in Astro pages
// This file demonstrates how to use the content collections

import { getCollection, getEntry } from 'astro:content';

// Example 1: Get all entries from a collection
const allDocs = await getCollection('docs');
const allBlogPosts = await getCollection('blog');
const allProducts = await getCollection('products');
const allServices = await getCollection('services');

// Example 2: Filter entries
const publishedBlogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Example 3: Get a specific entry
const gettingStartedDoc = await getEntry('docs', 'getting-started');

// Example 4: Sort entries by navigation order
const sortedDocs = allDocs.sort((a, b) => {
  return (a.data.nav?.order ?? 999) - (b.data.nav?.order ?? 999);
});

// Example 5: Group entries by navigation group
const docsByGroup = allDocs.reduce(
  (acc, doc) => {
    const group = doc.data.nav?.group || 'Other';
    if (!acc[group]) acc[group] = [];
    acc[group].push(doc);
    return acc;
  },
  {} as Record<string, typeof allDocs>
);

// Example 6: Get products by tier
const liteProducts = await getCollection('products', ({ data }) => {
  return data.tier === 'lite';
});
