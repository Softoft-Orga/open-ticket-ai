---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactSalesButton from '../components/vue/domain/ContactSalesButton.vue';

const pageTitle = 'Contact Sales Button Test';
const pageDescription = 'Test page for the ContactSalesButton component';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-b from-background-dark to-surface-dark py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-white mb-8 text-center">
        ContactSalesButton Component Test
      </h1>
      
      <div class="space-y-8">
        <div class="bg-surface-dark p-8 rounded-2xl">
          <h2 class="text-2xl font-semibold text-white mb-4">Example 1: General Inquiry</h2>
          <p class="text-text-1 mb-4">Click the button below to open a contact sales form.</p>
          <ContactSalesButton 
            buttonText="Contact Sales" 
            formTitle="General Sales Inquiry"
            client:load
          />
        </div>

        <div class="bg-surface-dark p-8 rounded-2xl">
          <h2 class="text-2xl font-semibold text-white mb-4">Example 2: Enterprise Plan</h2>
          <p class="text-text-1 mb-4">Click the button below to contact us about enterprise pricing.</p>
          <ContactSalesButton 
            buttonText="Request Enterprise Demo" 
            formTitle="Enterprise Plan Inquiry"
            client:load
          />
        </div>

        <div class="bg-surface-dark p-8 rounded-2xl">
          <h2 class="text-2xl font-semibold text-white mb-4">Example 3: Custom Integration</h2>
          <p class="text-text-1 mb-4">Click the button below to discuss custom integrations.</p>
          <ContactSalesButton 
            buttonText="Talk to Our Team" 
            formTitle="Custom Integration Request"
            client:load
          />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
