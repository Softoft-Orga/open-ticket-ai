---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Documentation | Open Ticket AI";
const description = "Choose the documentation you need. Explore API references, implementation guides, and best practices.";

// Fetch all docs entries
const docsEntries = await getCollection('docs');

// Group docs by top-level directory
const docSections = new Map<string, { title: string; description: string; icon: string; entries: typeof docsEntries }>();

docsEntries.forEach((entry) => {
  const topLevelDir = entry.id.split('/')[0];
  
  if (!docSections.has(topLevelDir)) {
    // Create section metadata based on directory name
    let sectionTitle = topLevelDir
      .split('-')
      .map(word => word.charAt(0).toUpperCase() + word.slice(1))
      .join(' ');
    
    let sectionDesc = '';
    let sectionIcon = '';
    
    // Customize metadata for known sections
    if (topLevelDir === 'open-ticket-automation') {
      sectionTitle = 'Open Ticket Automation';
      sectionDesc = 'Integration layer for OTOBO, Znuny/OTRS, and Zammad. Setup, connectors, automation rules, API, and troubleshooting.';
      sectionIcon = 'settings';
    } else if (topLevelDir === 'ticket-tagging') {
      sectionTitle = 'Ticket Tagging AI';
      sectionDesc = 'On-prem ticket classification. Tag schema, output format, multilingual behavior, backlog tagging, hardware sizing, and evaluation.';
      sectionIcon = 'tag';
    }
    
    docSections.set(topLevelDir, {
      title: sectionTitle,
      description: sectionDesc,
      icon: sectionIcon,
      entries: []
    });
  }
  
  docSections.get(topLevelDir)!.entries.push(entry);
});

// Convert to array for easier iteration
const sections = Array.from(docSections.entries()).map(([slug, data]) => ({
  slug,
  ...data
}));
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark py-24 relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none z-0">
      <div class="absolute -top-[10%] -left-[10%] w-1/2 h-1/2 bg-primary/5 rounded-full blur-[120px]"></div>
      <div class="absolute -bottom-[10%] -right-[10%] w-2/5 h-2/5 bg-primary-dark/10 rounded-full blur-[120px]"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold mb-8">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          Docs v2.4 Live
        </div>
        <h2 class="text-5xl md:text-7xl font-black tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-r from-white via-text-1 to-text-2">
          Documentation
        </h2>
        <p class="text-xl text-text-2 max-w-2xl mx-auto leading-relaxed">
          Choose the documentation you need. Explore API references, implementation guides, and best practices.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
        {sections.map((section) => (
          <a
            href={`/docs/${section.slug}/`}
            class="group relative block p-8 bg-surface-dark rounded-2xl border border-border-dark hover:border-primary/50 transition-all duration-300 shadow-lg hover:shadow-2xl hover:shadow-primary/10"
          >
            <div class="absolute -inset-1 bg-gradient-to-r from-primary/0 to-primary/0 group-hover:from-primary/20 group-hover:to-primary-dark/20 rounded-2xl blur opacity-0 group-hover:opacity-50 transition duration-500"></div>
            <div class="relative">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  {section.icon === 'settings' ? (
                    <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  ) : section.icon === 'tag' ? (
                    <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
                    </svg>
                  ) : (
                    <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                    </svg>
                  )}
                </div>
              </div>
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{section.title}</h3>
              <p class="text-text-2 leading-relaxed mb-4">{section.description}</p>
              <div class="flex items-center gap-2 text-primary text-sm font-semibold">
                <span>Open Documentation</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-24 pt-16 border-t border-border-dark text-center">
        <h4 class="text-sm font-bold uppercase tracking-[0.2em] text-muted mb-12">Quick Resources</h4>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a
            href="#"
            class="group flex flex-col items-center gap-3 p-6 bg-surface-dark/30 rounded-xl border border-border-dark hover:border-primary/40 hover:bg-surface-dark/50 transition-all duration-300"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/5 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
              </svg>
            </div>
            <span class="text-sm font-medium text-text-2 group-hover:text-white transition-colors text-center">Deployment</span>
          </a>

          <a
