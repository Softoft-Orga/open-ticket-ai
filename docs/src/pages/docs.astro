---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

const title = "Documentation | Open Ticket AI";
const description = "Choose the documentation you need. Explore API references, implementation guides, and best practices.";

const currentLocale = Astro.currentLocale || 'en';
const automationDocsUrl = getRelativeLocaleUrl(currentLocale, '/docs/open-ticket-automation/');
const taggingDocsUrl = getRelativeLocaleUrl(currentLocale, '/docs/ticket-tagging/');
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark py-24 relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none z-0">
      <div class="absolute -top-[10%] -left-[10%] w-1/2 h-1/2 bg-primary/5 rounded-full blur-[120px]"></div>
      <div class="absolute -bottom-[10%] -right-[10%] w-2/5 h-2/5 bg-purple-900/10 rounded-full blur-[120px]"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold mb-8">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          Docs v2.4 Live
        </div>
        <h2 class="text-5xl md:text-7xl font-black tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-r from-white via-slate-200 to-slate-400">
          Documentation
        </h2>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
          Choose the documentation you need. Explore API references, implementation guides, and best practices.
        </p>
      </div>



      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
        <!-- Open Ticket Automation Docs Card -->
        <a
          href={automationDocsUrl}
          class="group relative block p-8 bg-card-dark rounded-2xl border border-slate-700 hover:border-primary/50 transition-all duration-300 shadow-lg hover:shadow-2xl hover:shadow-primary/10"
        >
          <div class="absolute -inset-1 bg-gradient-to-r from-primary/0 to-primary/0 group-hover:from-primary/20 group-hover:to-purple-600/20 rounded-2xl blur opacity-0 group-hover:opacity-50 transition duration-500"></div>
          <div class="relative">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">Open Ticket Automation Docs</h3>
            <p class="text-slate-400 leading-relaxed mb-4">Integration layer for OTOBO, Znuny/OTRS, and Zammad. Setup, connectors, automation rules, API, and troubleshooting.</p>
            <div class="flex items-center gap-2 text-primary text-sm font-semibold">
              <span>Open Automation Docs</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </a>

        <!-- Tagging AI Docs Card -->
        <a
          href={taggingDocsUrl}
          class="group relative block p-8 bg-card-dark rounded-2xl border border-slate-700 hover:border-primary/50 transition-all duration-300 shadow-lg hover:shadow-2xl hover:shadow-primary/10"
        >
          <div class="absolute -inset-1 bg-gradient-to-r from-primary/0 to-primary/0 group-hover:from-primary/20 group-hover:to-purple-600/20 rounded-2xl blur opacity-0 group-hover:opacity-50 transition duration-500"></div>
          <div class="relative">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">Tagging AI Docs</h3>
            <p class="text-slate-400 leading-relaxed mb-4">On-prem ticket classification. Tag schema, output format, multilingual behavior, backlog tagging, hardware sizing, and evaluation.</p>
            <div class="flex items-center gap-2 text-primary text-sm font-semibold">
              <span>Open Tagging AI Docs</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </a>
      </div>

      <div class="mt-24 pt-16 border-t border-slate-800 text-center">
        <h4 class="text-sm font-bold uppercase tracking-[0.2em] text-slate-500 mb-12">Quick Resources</h4>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Deployment -->
          <a
            href="#"
            class="group flex flex-col items-center gap-3 p-6 bg-slate-900/30 rounded-xl border border-slate-800 hover:border-primary/40 hover:bg-slate-900/50 transition-all duration-300"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/5 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
              </svg>
            </div>
            <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors text-center">Deployment</span>
          </a>

          <!-- Security & Data Flow -->
          <a
            href="#"
            class="group flex flex-col items-center gap-3 p-6 bg-slate-900/30 rounded-xl border border-slate-800 hover:border-primary/40 hover:bg-slate-900/50 transition-all duration-300"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/5 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors text-center">Security & Data Flow</span>
          </a>

          <!-- Troubleshooting -->
          <a
            href="#"
            class="group flex flex-col items-center gap-3 p-6 bg-slate-900/30 rounded-xl border border-slate-800 hover:border-primary/40 hover:bg-slate-900/50 transition-all duration-300"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/5 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
              </svg>
            </div>
            <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors text-center">Troubleshooting</span>
          </a>

          <!-- Release Notes -->
          <a
            href="#"
            class="group flex flex-col items-center gap-3 p-6 bg-slate-900/30 rounded-xl border border-slate-800 hover:border-primary/40 hover:bg-slate-900/50 transition-all duration-300"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/5 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors text-center">Release Notes</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
