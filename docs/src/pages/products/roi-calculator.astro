---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/vue/core/basic/Card.vue';
import BeyondSavingsCard from '../../components/vue/domain/BeyondSavingsCard.vue';

const title = "Pricing & ROI Calculator";
const description = "Calculate the return on investment for automated ticket tagging in your helpdesk environment.";
---

<BaseLayout title={title} description={description}>
  <div slot="head" />

  <div class="min-h-screen bg-bg-1 py-12">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-text-1 mb-4">
          ROI Analysis
        </h1>
        <p class="text-text-2 text-lg max-w-2xl mx-auto">
          Understand the potential return on investment for automated ticket tagging in your helpdesk environment.
        </p>
      </div>

      <!-- ROI Overview -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <Card client:load tone="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            Time Savings
          </div>
          <div class="text-3xl font-bold text-text-1 mb-2">
            40-60%
          </div>
          <p class="text-sm text-text-dim">
            Average reduction in manual tagging time per ticket
          </p>
        </Card>

        <Card client:load tone="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            Cost Reduction
          </div>
          <div class="text-3xl font-bold text-text-1 mb-2">
            €2-5
          </div>
          <p class="text-sm text-text-dim">
            Saved per ticket through automation
          </p>
        </Card>

        <Card client:load tone="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            Payback Period
          </div>
          <div class="text-3xl font-bold text-text-1 mb-2">
            3-6 months
          </div>
          <p class="text-sm text-text-dim">
            Typical time to recover initial investment
          </p>
        </Card>
      </div>

      <!-- Example Scenarios -->
      <Card client:load tone="primary" class="mb-12">
        <h2 class="text-2xl font-bold text-text-1 mb-6">Example ROI Scenarios</h2>

        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead>
              <tr class="border-b border-border-1">
                <th class="py-3 px-4 text-sm font-semibold text-text-2 uppercase tracking-wider">Scenario</th>
                <th class="py-3 px-4 text-sm font-semibold text-text-2 uppercase tracking-wider">Daily Tickets</th>
                <th class="py-3 px-4 text-sm font-semibold text-text-2 uppercase tracking-wider">Manual Cost/Ticket</th>
                <th class="py-3 px-4 text-sm font-semibold text-text-2 uppercase tracking-wider">Annual Savings</th>
                <th class="py-3 px-4 text-sm font-semibold text-text-2 uppercase tracking-wider">ROI</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-border-1/30">
              <tr>
                <td class="py-4 px-4 text-text-1 font-medium">Small Team</td>
                <td class="py-4 px-4 text-text-1">100</td>
                <td class="py-4 px-4 text-text-1">€3.00</td>
                <td class="py-4 px-4 text-primary-light font-bold">€54,750</td>
                <td class="py-4 px-4 text-cyan-glow font-bold">274%</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-text-1 font-medium">Medium Enterprise</td>
                <td class="py-4 px-4 text-text-1">500</td>
                <td class="py-4 px-4 text-text-1">€4.00</td>
                <td class="py-4 px-4 text-primary-light font-bold">€365,000</td>
                <td class="py-4 px-4 text-cyan-glow font-bold">1,825%</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-text-1 font-medium">Large Enterprise</td>
                <td class="py-4 px-4 text-text-1">2000</td>
                <td class="py-4 px-4 text-text-1">€5.00</td>
                <td class="py-4 px-4 text-primary-light font-bold">€1,825,000</td>
                <td class="py-4 px-4 text-cyan-glow font-bold">9,125%</td>
              </tr>
            </tbody>
          </table>
        </div>

        <p class="text-xs text-text-2 mt-4 italic">
          * Calculations assume 50% time savings and 250 working days per year. Actual results may vary.
        </p>
      </Card>

      <!-- Key Benefits -->
      <BeyondSavingsCard client:load />
    </div>
  </div>
</BaseLayout>
