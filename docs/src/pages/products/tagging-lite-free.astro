---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '../../components/vue/core/basic/Button.vue';
import Card from '../../components/vue/core/basic/Card.vue';
import Badge from '../../components/vue/core/basic/Badge.vue';

const title = "Tagging AI Lite Free";
const description = "Small-footprint classification. Optimized for edge deployment and privacy-focused evaluation.";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark">
    <!-- Hero Section -->
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24">
      <div class="mb-12">
        <div class="inline-block mb-6">
          <Badge client:load type="primary">
            ðŸ”’ ON-PREMISE ONLY (0.5B PARAMETERS)
          </Badge>
        </div>
        <h1 class="text-5xl md:text-7xl font-black text-white mb-8">
          Tagging AI <span class="text-primary-light">Lite Free.</span>
        </h1>
        <p class="text-xl text-text-dim max-w-3xl leading-relaxed mb-12">
          Small-footprint classification. Optimized for edge deployment and privacy-focused evaluation. 
          Supports the full OTA taxonomy tree.
        </p>
        <Button client:load variant="secondary" size="lg">
          DOWNLOAD CONTAINER
        </Button>
      </div>

      <!-- Performance Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
        <Card client:load variant="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            MODEL SIZE
          </div>
          <div class="text-2xl font-bold text-white">
            500M Params
          </div>
        </Card>
        <Card client:load variant="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            VRAM REQUIREMENT
          </div>
          <div class="text-2xl font-bold text-white">
            &lt;1GB
          </div>
        </Card>
        <Card client:load variant="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            AVERAGE ACCURACY
          </div>
          <div class="text-2xl font-bold text-white">
            ~82%
          </div>
        </Card>
        <Card client:load variant="primary" hoverable>
          <div class="text-sm text-text-dim mb-2 font-semibold uppercase tracking-wider">
            LANGUAGE SUPPORT
          </div>
          <div class="text-2xl font-bold text-white">
            Global / Multilingual
          </div>
        </Card>
      </div>

      <!-- Note Section -->
      <div class="bg-surface-dark border border-border-dark rounded-3xl p-12 text-center mb-20">
        <h2 class="text-3xl font-bold text-white mb-4">
          Lightweight & Privacy-First
        </h2>
        <p class="text-text-dim text-lg max-w-2xl mx-auto">
          Lite Free runs entirely on-premise with minimal resource requirements, making it ideal for 
          edge deployments, evaluation environments, and privacy-sensitive use cases.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
