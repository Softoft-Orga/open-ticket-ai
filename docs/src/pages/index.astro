---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/vue/core/basic/Card.vue';
import Badge from '../components/vue/core/basic/Badge.vue';
import Button from '../components/vue/core/basic/Button.vue';

const pageTitle = 'Open Ticket AI - Automated Ticket Tagging, On-Premise';

// Get all services from content collection
const allServices = await getCollection('services');
const services = allServices
  .filter(s => !s.data.nav?.hidden)
  .map(s => ({
    slug: s.data.slug,
    title: s.data.title,
    oneLiner: s.data.oneLiner,
    description: s.data.description,
    outcomes: s.data.outcomes,
    startingPrice: s.data.startingPrice,
    group: s.data.nav?.group
  }))
  .sort((a, b) => {
    const aOrder = allServices.find(s => s.data.slug === a.slug)?.data.nav?.order || 999;
    const bOrder = allServices.find(s => s.data.slug === b.slug)?.data.nav?.order || 999;
    return aOrder - bOrder;
  })
  .slice(0, 6); // Show top 6 services

const integrations = [
  { name: 'OTOBO' },
  { name: 'Znuny/OTRS' },
  { name: 'Zammad' }
];

const features = [
  {
    title: '100% On-Premise Execution',
    description: 'Ticket data processed locally'
  },
  {
    title: 'Multi-language Support',
    description: 'EN, DE, FR, etc.'
  },
  {
    title: 'Custom Hierarchical Taxonomies',
    description: 'Handling complex nested tags and multiple languages with enterprise-grade precision'
  }
];
---

<BaseLayout title={pageTitle}>
  <div slot="head" />

  <div class="w-full bg-background-dark text-white antialiased">
    <!-- Hero Section -->
    <section class="relative w-full px-4 md:px-10 lg:px-20 xl:px-40 py-20 flex justify-center bg-glow-radial">
      <div class="w-full max-w-7xl flex flex-col gap-12 items-center text-center">
        <div class="flex items-center gap-2 w-fit px-3 py-1 rounded-full border border-primary/30 bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          Tagging AI + classification engine, Open Ticket Automation + integration + workflow logic
        </div>

        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-bold leading-tight tracking-tight text-white max-w-5xl">
          Automated Ticket Tagging. <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-400">On-Premise.</span>
        </h1>

        <p class="text-gray-400 text-xl leading-relaxed max-w-3xl">
          Tagging AI classifies tickets in real time. Open Ticket Automation integrates with your helpdesk and drives workflows without sending ticket data to the cloud.
        </p>

        <div class="flex flex-wrap gap-4 pt-4 justify-center">
          <Button variant="primary" size="lg" client:load>
            Get Demo
          </Button>
          <Button variant="outline" size="lg" client:load>
            Contact Sales
          </Button>
        </div>
      </div>
    </section>

    <!-- Integration Logos -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-16 bg-surface-dark/30">
      <div class="w-full max-w-7xl mx-auto">
        <div class="flex flex-col items-center gap-8">
          <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider">
            WORKS WITH
          </h3>
          <div class="flex flex-wrap items-center justify-center gap-12 md:gap-16">
            {integrations.map((integration) => (
              <div class="flex items-center gap-3 px-4 py-2 rounded-lg bg-surface-dark/50 border border-border-dark hover:border-primary/30 transition-colors">
                <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                  </svg>
                </div>
                <span class="text-gray-300 font-medium">{integration.name}</span>
              </div>
            ))}
          </div>
          <p class="text-gray-500 text-sm">
            More on request
          </p>
        </div>
      </div>
    </section>

    <!-- Tagging AI Feature Showcase -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24 bg-background-dark">
      <div class="w-full max-w-7xl mx-auto">
        <Card background="surface-dark" padding="lg" hoverable client:load class="relative overflow-hidden">
          <!-- Decorative glow effect -->
          <div class="absolute -right-20 -top-20 w-96 h-96 bg-secondary/10 rounded-full blur-[100px]" />

          <div class="flex flex-col lg:flex-row gap-16 items-center">
            <!-- Image/Visual Side -->
            <div class="w-full lg:w-1/2 order-2 lg:order-1 z-10">
              <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-1000" />
                <div class="relative w-full aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center rounded-xl">
                  <svg class="w-24 h-24 text-primary/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                  </svg>
                </div>
              </div>
            </div>

            <!-- Content Side -->
            <div class="w-full lg:w-1/2 flex flex-col gap-6 order-1 lg:order-2 z-10">
              <Badge type="primary" client:load class="w-fit uppercase tracking-wider">
                Core Engine
              </Badge>

              <h2 class="font-display text-4xl font-bold text-white leading-tight">
                Tagging AI
              </h2>

              <p class="text-text-dim text-xl leading-relaxed">
                Hierarchical, multilingual ticket classification that stays on your server.
              </p>

              <div class="flex flex-col gap-3 mt-4">
                {features.map((feature) => (
                  <div class="flex items-start gap-3 hover:translate-x-1 transition-transform duration-200">
                    <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-1">
                      <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div class="flex flex-col gap-1">
                      <span class="text-white font-semibold">{feature.title}</span>
                      {feature.description && (
                        <span class="text-text-dim text-sm">{feature.description}</span>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </Card>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24 bg-background-dark">
      <div class="w-full max-w-7xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="font-display text-4xl font-bold text-white mb-4">
            Services that get you live fast
          </h2>
          <p class="text-gray-400 text-lg">
            Integration packages, automation setup, and custom development for your needs
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="flex h-full flex-col gap-4 rounded-2xl border border-border-dark bg-surface-dark p-6 shadow-card">
              <div class="flex items-start justify-between gap-3">
                <div>
                  <h3 class="text-xl font-semibold text-text-1">{service.title}</h3>
                  {service.oneLiner && <p class="text-text-2 text-sm mt-1">{service.oneLiner}</p>}
                </div>
                <span class="rounded-full bg-primary/15 px-3 py-1 text-xs font-medium text-primary">{service.group}</span>
              </div>

              {service.description && <p class="text-text-2 text-sm leading-relaxed">{service.description}</p>}

              {service.outcomes?.length && (
                <ul class="flex flex-col gap-2 text-sm text-text-2">
                  {service.outcomes.map((item) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 size-2 rounded-full bg-primary" />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              )}

              <div class="mt-auto flex items-center justify-between">
                {typeof service.startingPrice === 'number' ? (
                  <div class="text-sm text-text-2">
                    Starting at <span class="text-text-1 font-semibold">${service.startingPrice}</span>
                  </div>
                ) : (
                  <div class="text-sm text-text-2">Custom pricing</div>
                )}
                <a
                  class="rounded-lg border border-primary/60 bg-primary/15 px-4 py-2 text-sm font-semibold text-text-1 transition-colors hover:bg-primary/25 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/60"
                  href="/services/"
                >
                  Learn more
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Security & Data Flow Section -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24 bg-surface-dark/30">
      <div class="w-full max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Security & Data Flow -->
          <div class="flex flex-col gap-6 p-8 bg-surface-dark/50 border border-border-dark rounded-2xl">
            <h3 class="text-2xl font-bold text-white">Security & Data Flow</h3>
            <div class="flex flex-col gap-3">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">Ticket data processed locally</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">No external cloud required</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">Logging and access control supported</span>
              </div>
            </div>
          </div>

          <!-- Built for Enterprise Helpdesks -->
          <div class="flex flex-col gap-6 p-8 bg-surface-dark/50 border border-border-dark rounded-2xl">
            <h3 class="text-2xl font-bold text-white">Built for enterprise helpdesks</h3>
            <div class="flex flex-col gap-3">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-cyan-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">On-premise / private cloud deployment</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-cyan-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">Multilingual tickets supported</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-cyan-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">Backlog tagging for historical tickets</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-cyan-500/20 flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-gray-300">Typical rollout: days to weeks</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>
