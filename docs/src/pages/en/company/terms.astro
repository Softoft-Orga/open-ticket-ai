---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Card from '../../../components/vue/core/basic/Card.vue';
import Badge from '../../../components/vue/core/basic/Badge.vue';
import { ScaleIcon } from '@heroicons/vue/24/outline';

const title = 'Terms & Conditions - Open Ticket AI';
const description = 'Terms and Conditions for Open Ticket AI products and services';

const currentLocale = (Astro.currentLocale || 'en').toLowerCase();
const allSiteConfigs = await getCollection('site');
const siteConfig = allSiteConfigs.find(entry =>
  entry.id.toLowerCase().startsWith(`${currentLocale}/`)
);

const legalInfo = siteConfig?.data.legalInfo;
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark pb-32">
    <section class="relative pb-20 pt-24">
      <div class="mx-auto max-w-5xl px-6">
        <div class="mb-8 text-center">
          <Badge variant="subtle" tone="info" size="sm" client:load>
            <span class="flex items-center gap-2">
              <ScaleIcon class="h-3 w-3" aria-hidden="true" />
              Legal Information
            </span>
          </Badge>
        </div>
        <h1
          class="mb-8 text-center text-6xl font-black leading-tight tracking-tighter text-white sm:text-7xl"
        >
          Terms & Conditions
        </h1>
        <p class="mx-auto mb-16 max-w-3xl text-center text-xl text-slate-400">
          Please read these terms and conditions carefully before using our products and services.
        </p>

        {
          legalInfo && (
            <Card
              variant="surface"
              tone="neutral"
              size="lg"
              radius="2xl"
              elevation="sm"
              client:load
            >
              <div slot="header">
                <h2 class="text-2xl font-bold text-white">Company Information</h2>
              </div>

              <div class="space-y-6">
                <div>
                  <h3 class="mb-2 text-sm font-bold uppercase tracking-widest text-slate-500">
                    Company Name
                  </h3>
                  <p class="text-lg text-white">{legalInfo.companyName}</p>
                  <p class="text-sm text-slate-400">{legalInfo.legalForm}</p>
                </div>

                <div>
                  <h3 class="mb-2 text-sm font-bold uppercase tracking-widest text-slate-500">
                    Management
                  </h3>
                  <p class="text-lg text-white">CEO: {legalInfo.ceo}</p>
                </div>

                <div>
                  <h3 class="mb-2 text-sm font-bold uppercase tracking-widest text-slate-500">
                    Address
                  </h3>
                  <p class="text-lg text-white">{legalInfo.address.street}</p>
                  <p class="text-lg text-white">
                    {legalInfo.address.zip} {legalInfo.address.city}
                  </p>
                  <p class="text-lg text-white">{legalInfo.address.country}</p>
                </div>

                <div class="grid gap-6 md:grid-cols-2">
                  <div>
                    <h3 class="mb-2 text-sm font-bold uppercase tracking-widest text-slate-500">
                      Contact
                    </h3>
                    <p class="text-white">
                      <span class="text-slate-500">Email:</span>{' '}
                      <a href={`mailto:${legalInfo.email}`} class="text-primary hover:underline">
                        {legalInfo.email}
                      </a>
                    </p>
                    <p class="text-white">
                      <span class="text-slate-500">Phone:</span>{' '}
                      <a href={`tel:${legalInfo.phone}`} class="text-primary hover:underline">
                        {legalInfo.phone}
                      </a>
                    </p>
                  </div>

                  <div>
                    <h3 class="mb-2 text-sm font-bold uppercase tracking-widest text-slate-500">
                      Registration
                    </h3>
                    <p class="text-white">{legalInfo.registerInfo}</p>
                    <p class="text-white">
                      <span class="text-slate-500">VAT ID:</span> {legalInfo.vatId}
                    </p>
                  </div>
                </div>
              </div>
            </Card>
          )
        }

        <div class="mt-12 space-y-8">
          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">1. General Terms</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                These Terms & Conditions govern your use of Open Ticket AI products and services
                (collectively, the "Services"). By accessing or using our Services, you agree to be
                bound by these terms.
              </p>
              <p class="text-slate-300">
                If you do not agree to these terms, please do not use our Services.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">2. Services Description</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                Open Ticket AI provides intelligent automation solutions for helpdesk ticketing
                systems including OTRS, Znuny, and Zammad. Our Services include:
              </p>
              <ul class="list-disc space-y-2 pl-6 text-slate-300">
                <li>AI-powered ticket classification and tagging models</li>
                <li>Automation engine for workflow automation</li>
                <li>Integration services for existing ticket systems</li>
                <li>Custom model development and training services</li>
                <li>Synthetic data generation for AI training</li>
                <li>Professional consulting and support services</li>
              </ul>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">3. License and Usage Rights</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                Subject to these terms and payment of applicable fees, we grant you a limited,
                non-exclusive, non-transferable license to use our Services for your internal
                business purposes.
              </p>
              <p class="text-slate-300">
                Open-source components of our platform are licensed under their respective
                open-source licenses. Custom AI models and proprietary integrations are licensed
                separately as specified in your service agreement.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">4. Data Privacy and Security</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">We are committed to protecting your data and privacy:</p>
              <ul class="list-disc space-y-2 pl-6 text-slate-300">
                <li>Self-hosted deployment ensures your data remains within your infrastructure</li>
                <li>We comply with GDPR and other applicable data protection regulations</li>
                <li>
                  Synthetic data generation uses no real customer data unless explicitly provided by
                  you
                </li>
                <li>
                  Data processing agreements are available upon request for enterprise customers
                </li>
              </ul>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">5. Pricing and Payment</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                Pricing for our Services is available on our website and in individual service
                agreements. Unless otherwise specified:
              </p>
              <ul class="list-disc space-y-2 pl-6 text-slate-300">
                <li>All prices are quoted in Euros (EUR) and exclude applicable taxes</li>
                <li>Payment terms are net 30 days from invoice date</li>
                <li>Integration and development services are billed as one-time fees</li>
                <li>
                  Ongoing support and maintenance are billed according to the service agreement
                </li>
              </ul>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">6. Support and Maintenance</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                Support levels and response times vary by service tier and are defined in your
                service agreement. Standard business hours are Monday-Friday, 9:00-17:00 CET,
                excluding German public holidays.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">7. Warranties and Disclaimers</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                We warrant that our Services will perform substantially in accordance with the
                documentation provided. However, AI-based services are provided "as is" and results
                may vary based on your data, configuration, and use case.
              </p>
              <p class="text-slate-300">
                We do not guarantee specific accuracy rates or automation success rates as these
                depend on factors outside our control.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">8. Limitation of Liability</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                To the maximum extent permitted by applicable law, our total liability for any
                claims arising from these terms or your use of our Services shall not exceed the
                fees paid by you in the twelve (12) months preceding the claim.
              </p>
              <p class="text-slate-300">
                We are not liable for any indirect, incidental, special, consequential, or punitive
                damages, including loss of profits, data, or business opportunities.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">9. Intellectual Property</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                All intellectual property rights in our Services, including software, models,
                documentation, and branding, remain our property or that of our licensors.
              </p>
              <p class="text-slate-300">
                Custom models developed specifically for you under a service agreement may be
                licensed to you according to the terms of that agreement.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">10. Term and Termination</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                These terms remain in effect until terminated. Either party may terminate a service
                agreement with 30 days written notice, unless otherwise specified in your service
                agreement.
              </p>
              <p class="text-slate-300">
                Upon termination, you must cease using our Services and, if applicable, return or
                destroy any confidential information.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">11. Governing Law and Jurisdiction</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                These Terms & Conditions are governed by the laws of the Federal Republic of
                Germany. Any disputes arising from or in connection with these terms shall be
                subject to the exclusive jurisdiction of the courts of Berlin, Germany.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">12. Changes to Terms</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                We reserve the right to modify these terms at any time. We will notify you of
                material changes by email or through our website. Your continued use of our Services
                after such changes constitutes acceptance of the modified terms.
              </p>
            </div>
          </Card>

          <Card variant="outline" tone="neutral" size="lg" radius="2xl" client:load>
            <div slot="header">
              <h2 class="text-2xl font-bold text-white">13. Contact Information</h2>
            </div>
            <div class="prose prose-invert max-w-none">
              <p class="text-slate-300">
                For questions about these Terms & Conditions, please contact us at:
              </p>
              {
                legalInfo && (
                  <div class="mt-4 rounded-lg border border-white/10 bg-white/5 p-6">
                    <p class="text-white">
                      <strong>{legalInfo.companyName}</strong>
                    </p>
                    <p class="text-slate-300">{legalInfo.address.street}</p>
                    <p class="text-slate-300">
                      {legalInfo.address.zip} {legalInfo.address.city}, {legalInfo.address.country}
                    </p>
                    <p class="mt-2 text-slate-300">
                      Email:{' '}
                      <a href={`mailto:${legalInfo.email}`} class="text-primary hover:underline">
                        {legalInfo.email}
                      </a>
                    </p>
                    <p class="text-slate-300">
                      Phone:{' '}
                      <a href={`tel:${legalInfo.phone}`} class="text-primary hover:underline">
                        {legalInfo.phone}
                      </a>
                    </p>
                  </div>
                )
              }
            </div>
          </Card>

          <div class="mt-12 rounded-xl border border-slate-700/50 bg-slate-800/30 p-6 text-center">
            <p class="text-sm text-slate-400">
              Last updated: {
                new Date().toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })
              }
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
