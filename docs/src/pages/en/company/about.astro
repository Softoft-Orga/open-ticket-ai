---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Button from '../../../components/vue/core/basic/Button.vue';
import Badge from '../../../components/vue/core/basic/Badge.vue';
import { Icon } from 'astro-icon/components';
import ModalTrigger from '../../../components/vue/core/basic/ModalTrigger.vue';
import ContactForm from '../../../components/ContactForm.astro';

const title = 'About Us - Open Ticket AI';
const description = 'Learn about Open Ticket AI, our team, and our mission';

const currentLocale = (Astro.currentLocale || 'en').toLowerCase();
const allSiteConfigs = await getCollection('site');
const siteConfig = allSiteConfigs.find(entry =>
  entry.id.toLowerCase().startsWith(`${currentLocale}/`)
);

const meta = siteConfig?.data.meta;
const legalInfo = siteConfig?.data.legalInfo;
const team = siteConfig?.data.team || [];
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark pb-32">
    <!-- Hero Section -->
    <section class="relative overflow-hidden pb-24 pt-32">
      <div class="relative mx-auto max-w-6xl px-6 text-center">
        <div class="mb-6">
          <Badge variant="subtle" tone="primary" size="sm" client:load>
            <span class="flex items-center gap-2">
              <Icon name="heroicons:sparkles" class="h-3 w-3" aria-hidden="true" />
              STRICTLY ON-PREMISE AI
            </span>
          </Badge>
        </div>

        <h1 class="mb-8 text-5xl font-black leading-tight text-white md:text-6xl lg:text-7xl">
          Bridging the Gap Between<br />Innovation and Security
        </h1>

        <p class="mx-auto mb-10 max-w-3xl text-lg leading-relaxed text-slate-400">
          We build on-premise AI automation tailored for privacy-obsessed enterprises. No data
          leaves your servers. No compromise on power.
        </p>

        <div class="flex flex-wrap items-center justify-center gap-4">
          <Button variant="surface" tone="primary" size="lg" href="#mission" client:load>
            Explore Our Mission
          </Button>
          <Button variant="outline" tone="neutral" size="lg" href="/en/docs/" client:load>
            View Documentation
          </Button>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section id="mission" class="mx-auto mb-24 max-w-6xl px-6">
      <div
        class="overflow-hidden rounded-3xl border border-purple-500/20 bg-gradient-to-br from-purple-900/40 to-purple-950/30"
      >
        <div class="grid grid-cols-1 gap-8 p-12 lg:grid-cols-2 lg:gap-12">
          <div>
            <h2 class="mb-6 text-4xl font-bold text-white">Our Mission</h2>
            <p class="mb-8 text-base leading-relaxed text-slate-300">
              To bring cutting-edge Large Language Model capabilities to strictly regulated
              on-premise environments, ensuring that innovation never comes at the cost of data
              sovereignty. We believe AI should serve your infrastructure, not the other way around.
            </p>

            <div class="flex gap-8">
              <div>
                <div class="mb-1 text-4xl font-black text-white">100%</div>
                <div class="text-sm text-slate-400">Data Privacy</div>
              </div>
              <div>
                <div class="mb-1 text-4xl font-black text-white">0ms</div>
                <div class="text-sm text-slate-400">Cloud Latency</div>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-center">
            <div
              class="relative flex h-64 w-64 items-center justify-center rounded-2xl border border-purple-500/30 bg-purple-900/20"
            >
              <div class="absolute inset-0 flex items-center justify-center">
                <Icon
                  name="heroicons:shield-check"
                  class="h-32 w-32 text-purple-400/40"
                  aria-hidden="true"
                />
              </div>
              <div
                class="relative rounded-xl border border-purple-500/40 bg-purple-950/60 px-6 py-4"
              >
                <div class="mb-2 flex items-center gap-2">
                  <div class="h-3 w-3 rounded-full bg-green-500"></div>
                  <span class="text-xs font-bold text-white">On Premise</span>
                </div>
                <div class="text-xs text-slate-400">Your Data, Your Infrastructure</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    {
      team.length > 0 && (
        <section class="mx-auto mb-24 max-w-6xl px-6">
          <div class="mb-12">
            <h2 class="mb-4 text-4xl font-bold text-white">The Minds Behind the Code</h2>
            <p class="text-base text-slate-400">
              Experts in Machine Learning, Cybersecurity, and Enterprise Architecture.
            </p>
          </div>

          <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
            {team.map(member => (
              <div class="text-center">
                {member.pictureUrl && (
                  <div class="mb-4 flex justify-center">
                    <div class="overflow-hidden rounded-full border-4 border-purple-500/30">
                      <Image
                        src={member.pictureUrl}
                        alt={member.name || 'Team Member'}
                        class="h-32 w-32 object-cover"
                        width={128}
                        height={128}
                      />
                    </div>
                  </div>
                )}

                <div>
                  {member.name && <h3 class="mb-1 text-lg font-bold text-white">{member.name}</h3>}
                  {member.role && (
                    <p class="mb-3 text-sm font-medium text-purple-400">{member.role}</p>
                  )}
                  {member.description && (
                    <p class="mb-4 text-xs leading-relaxed text-slate-400">{member.description}</p>
                  )}

                  {/* Contact Information */}
                  <div class="mt-4 space-y-2 text-xs text-slate-400">
                    {member.email && (
                      <div class="flex items-center justify-center gap-2">
                        <Icon name="heroicons:envelope" class="h-4 w-4" aria-hidden="true" />
                        <a
                          href={`mailto:${member.email}`}
                          class="transition-colors hover:text-purple-400"
                        >
                          {member.email}
                        </a>
                      </div>
                    )}
                    {member.phoneNumber && (
                      <div class="flex items-center justify-center gap-2">
                        <Icon name="heroicons:phone" class="h-4 w-4" aria-hidden="true" />
                        <a
                          href={`tel:${member.phoneNumber}`}
                          class="transition-colors hover:text-purple-400"
                        >
                          {member.phoneNumber}
                        </a>
                      </div>
                    )}
                    {member.linkedInUrl && (
                      <div class="flex items-center justify-center gap-2">
                        <Icon name="simple-icons:linkedin" class="h-4 w-4" aria-hidden="true" />
                        <a
                          href={member.linkedInUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="transition-colors hover:text-purple-400"
                        >
                          LinkedIn
                        </a>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      )
    }

    <!-- Philosophy Section -->
    <section class="mx-auto mb-24 max-w-6xl px-6">
      <div class="mb-12 text-center">
        <h2 class="mb-4 text-4xl font-bold text-white">Our Core Philosophy</h2>
        <p class="text-base text-slate-400">
          Built on three immutable pillars that define our approach to secure enterprise AI.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <div
          class="rounded-2xl border border-purple-500/20 bg-gradient-to-br from-purple-900/30 to-purple-950/20 p-8"
        >
          <div class="mb-6">
            <div class="inline-flex rounded-xl bg-purple-500/20 p-3">
              <Icon name="heroicons:sparkles" class="h-6 w-6 text-purple-400" aria-hidden="true" />
            </div>
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">German Engineering</h3>
          <p class="text-sm leading-relaxed text-slate-400">
            Precision, reliability, and quality in everything we do. We build infrastructure-grade
            AI that doesn't break under pressure.
          </p>
        </div>

        <div
          class="rounded-2xl border border-purple-500/20 bg-gradient-to-br from-purple-900/30 to-purple-950/20 p-8"
        >
          <div class="mb-6">
            <div class="inline-flex rounded-xl bg-purple-500/20 p-3">
              <Icon
                name="heroicons:shield-check"
                class="h-6 w-6 text-purple-400"
                aria-hidden="true"
              />
            </div>
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">Privacy First</h3>
          <p class="text-sm leading-relaxed text-slate-400">
            Security is not a featureâ€”it's our baseline. Our on-premise AI never leaves your
            premises without explicit permission.
          </p>
        </div>

        <div
          class="rounded-2xl border border-purple-500/20 bg-gradient-to-br from-purple-900/30 to-purple-950/20 p-8"
        >
          <div class="mb-6">
            <div class="inline-flex rounded-xl bg-purple-500/20 p-3">
              <Icon
                name="heroicons:code-bracket"
                class="h-6 w-6 text-purple-400"
                aria-hidden="true"
              />
            </div>
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">Open Source Roots</h3>
          <p class="text-sm leading-relaxed text-slate-400">
            We believe in transparency. No proprietary lock-ins. All our models are built through
            community-verified foundations.
          </p>
        </div>
      </div>
    </section>
    <!-- Location Section -->
    {
      legalInfo && (
        <section class="mx-auto mb-24 max-w-6xl px-6">
          <div class="mb-8">
            <h2 class="mb-2 text-4xl font-bold text-white">Made in Germany. Compliant Globally.</h2>
            <p class="text-base text-slate-400">
              Headquartered in Berlin, {meta?.siteName} operates under the strictest data protection
              laws in the world.
            </p>
          </div>

          <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            <div>
              <div class="mb-6 flex items-center gap-4">
                <Badge variant="subtle" tone="success" size="sm" client:load>
                  <span class="flex items-center gap-2">
                    <Icon name="heroicons:shield-check" class="h-3 w-3" aria-hidden="true" />
                    GDPR Compliant
                  </span>
                </Badge>
                <Badge variant="subtle" tone="primary" size="sm" client:load>
                  <span class="flex items-center gap-2">
                    <Icon name="heroicons:globe-alt" class="h-3 w-3" aria-hidden="true" />
                    Data Sovereignty
                  </span>
                </Badge>
              </div>

              <div class="text-sm text-slate-400">
                <p class="mb-4 font-mono">{legalInfo.address.street}</p>
                <p class="mb-4 font-mono">
                  {legalInfo.address.zip}, {legalInfo.address.city}, {legalInfo.address.country}
                </p>
              </div>
            </div>

            <div class="flex items-center justify-center">
              <div class="flex h-64 w-full items-center justify-center rounded-2xl border border-purple-500/20 bg-gradient-to-br from-purple-900/20 to-purple-950/10">
                <div class="text-center">
                  <div class="mb-2 text-2xl font-bold text-white">Berlin</div>
                  <div class="text-sm text-slate-400">Germany</div>
                </div>
              </div>
            </div>
          </div>
        </section>
      )
    }

    <!-- Partner CTA Section -->
    <section class="mx-auto mb-24 max-w-6xl px-6">
      <div
        class="rounded-3xl border border-purple-500/20 bg-gradient-to-br from-purple-900/40 to-purple-950/30 p-12 text-center"
      >
        <h2 class="mb-4 text-4xl font-bold text-white">Partner with us</h2>
        <p class="mx-auto mb-8 max-w-2xl text-base text-slate-400">
          Ready to deploy secure AI automation in your infrastructure? Let's discuss your
          requirements.
        </p>

        <div class="flex flex-wrap items-center justify-center gap-4">
          <Button variant="surface" tone="primary" size="lg" href="/en/products/" client:load>
            Get Demo
          </Button>
          <ModalTrigger
            title="Contact Us"
            tone="neutral"
            size="lg"
            buttonText="Contact Us"
            buttonVariant="outline"
            buttonTone="neutral"
            buttonSize="lg"
            client:load
          >
            <ContactForm
              title="Contact Us"
              submitButtonText="Submit"
              messageLabel="Message"
              emailLabel="Email"
              subjectLabel="Subject"
              emailPlaceholder="your@email.com"
              messagePlaceholder="Tell us about your requirements..."
            />
          </ModalTrigger>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
