      <!-- Key Benefits -->
      <div
        class="rounded-3xl border border-primary/20 bg-gradient-to-br from-primary/10 to-cyan-glow/5 p-12 text-center"
      >
        <h2 class="mb-6 text-3xl font-bold text-text-1">Beyond Cost Savings</h2>
        <div class="mb-8 grid gap-8 md:grid-cols-3">
          <div>
            <div class="mb-3 text-4xl">âš¡</div>
