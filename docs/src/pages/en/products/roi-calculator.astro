---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Card from '../../../components/vue/core/basic/Card.vue';
import ContactSalesButton from '../../../components/vue/domain/ContactSalesButton.vue';

const title = 'Pricing & ROI Calculator';
const description =
  'Calculate the return on investment for automated ticket tagging in your helpdesk environment.';
---

<BaseLayout title={title} description={description}>
  <div slot="head"></div>

  <div class="min-h-screen bg-bg-1 py-12">
    <div class="mx-auto max-w-7xl px-4 py-8">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="mb-4 text-4xl font-bold text-text-1 md:text-5xl">ROI Analysis</h1>
        <p class="mx-auto max-w-2xl text-lg text-text-2">
          Understand the potential return on investment for automated ticket tagging in your
          helpdesk environment.
        </p>
      </div>

      <!-- ROI Overview -->
      <div class="mb-12 grid gap-6 md:grid-cols-3">
        <Card client:load tone="primary" hoverable>
          <div class="mb-2 text-sm font-semibold uppercase tracking-wider text-text-dim">
            Time Savings
          </div>
          <div class="mb-2 text-3xl font-bold text-text-1">40-60%</div>
          <p class="text-sm text-text-dim">Average reduction in manual tagging time per ticket</p>
        </Card>

        <Card client:load tone="primary" hoverable>
