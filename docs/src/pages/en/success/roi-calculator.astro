---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SuccessfullFormSubmisionCard from '../../../components/vue/domain/SuccessfullFormSubmisionCard.vue';

const title = 'Thank You!';
const description = 'Your custom ROI analysis request has been received.';
---

<BaseLayout title={title} description={description}>
  <div slot="head"></div>

  <div class="flex min-h-screen items-center justify-center bg-bg-1 px-4 py-12">
    <div class="w-full max-w-3xl">
      <SuccessfullFormSubmisionCard
        title="Request Received!"
        description="Thank you for your interest in a custom ROI analysis."
        primaryButtonText="Back to ROI Calculator"
        primaryButtonHref="/en/products/roi-calculator"
        secondaryButtonText="Return to Home"
        secondaryButtonHref="/"
        client:load
      >
        <div class="bg-bg-2/50 mb-8 rounded-xl p-6 text-left">
          <h2 class="mb-3 text-xl font-semibold text-text-1">What happens next?</h2>
          <ul class="space-y-3 text-text-2">
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-light"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Our team will review your information within 1-2 business days</span>
            </li>
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-light"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>We'll prepare a customized ROI analysis based on your ticket volume</span>
            </li>
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-light"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>A member of our sales team will reach out to discuss your specific needs</span>
            </li>
          </ul>
        </div>
      </SuccessfullFormSubmisionCard>
    </div>
  </div>
</BaseLayout>
