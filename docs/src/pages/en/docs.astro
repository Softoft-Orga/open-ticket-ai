---
import { getCollection } from 'astro:content';
import { getRelativeLocaleUrl } from 'astro:i18n';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/vue/core/basic/Card.vue';
import { Icon } from 'astro-icon/components';
import { posix } from 'node:path';

const title = 'Documentation | Open Ticket AI';
const description =
  'Choose the documentation you need. Explore API references, implementation guides, and best practices.';

const currentLocale = (Astro.currentLocale || 'en').toLowerCase();
const allSiteConfigs = await getCollection('site');
const siteConfig = allSiteConfigs.find(entry =>
  entry.id.toLowerCase().startsWith(`${currentLocale}/`)
);
const popularResources = siteConfig?.data.popularResources;

async function getDocTitle(docId: string): Promise<string> {
  try {
    const parts = docId.split('/');
    if (parts.length >= 3 && parts[0] === 'docs') {
      const slug = parts.slice(2).join('/');

      const allDocs = await getCollection('docs');
      const doc = allDocs.find(d => {
        const docSlug = d.slug.replace(/^en\//, '');
        return docSlug === slug;
      });

      if (doc) {
        return doc.data.title;
      }
    }
  } catch (e) {
    console.error('Error fetching doc title:', e);
  }

  return (
    docId
      .split('/')
      .pop()
      ?.replace(/-/g, ' ')
      .replace(/\b\w/g, l => l.toUpperCase()) || 'Documentation'
  );
}

const enrichedGroups = popularResources
  ? await Promise.all(
      popularResources.groups.map(async group => ({
        title: group.title,
        items: await Promise.all(
          group.items.map(async item => ({
            docId: item.docId,
            icon: item.icon,
            label: item.label,
            url: posix.join(group.basePath, item.docId),
            title: item.label || (await getDocTitle(item.docId)),
            iconName: item.icon,
          }))
        ),
      }))
    )
  : [];
---

<BaseLayout title={title} description={description}>
  <div class="relative min-h-screen overflow-hidden bg-background-dark py-24">
    <div class="pointer-events-none absolute inset-0 z-0">
      <div
        class="absolute -left-[10%] -top-[10%] h-1/2 w-1/2 rounded-full bg-primary/5 blur-[120px]"
      >
      </div>
      <div
        class="absolute -bottom-[10%] -right-[10%] h-2/5 w-2/5 rounded-full bg-purple-900/10 blur-[120px]"
      >
      </div>
    </div>

    <div class="relative z-10 mx-auto max-w-7xl px-6">
      <div class="mx-auto mb-20 max-w-3xl text-center">
        <div
          class="mb-8 inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-1.5 text-xs font-bold text-primary"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="absolute inline-flex h-full w-full animate-ping rounded-full bg-primary opacity-75"
            ></span>
            <span class="relative inline-flex h-2 w-2 rounded-full bg-primary"></span>
          </span>
          Docs v2.4 Live
        </div>
        <h2
          class="mb-6 bg-gradient-to-r from-white via-slate-200 to-slate-400 bg-clip-text text-5xl font-black tracking-tight text-transparent md:text-7xl"
        >
          Documentation
        </h2>
        <p class="mx-auto max-w-2xl text-xl leading-relaxed text-slate-400">
          Choose the documentation you need. Explore API references, implementation guides, and best
          practices.
        </p>
      </div>

      <div class="mx-auto mb-24 grid max-w-5xl grid-cols-1 gap-10 md:grid-cols-2">
        <a
          href={getRelativeLocaleUrl(Astro.currentLocale || 'en', 'docs/open-ticket-automation')}
          class="group relative block"
        >
          <Card variant="outline" radius="2xl" hoverable elevation="lg" client:load>
            <div class="mb-4 flex items-center gap-4">
              <div
                class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 transition-colors group-hover:bg-primary/20"
              >
                <svg
                  class="h-8 w-8 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
            </div>
            <h3
              class="mb-3 text-2xl font-bold text-white transition-colors group-hover:text-primary"
            >
              Open Ticket Automation Docs
            </h3>
            <p class="mb-4 leading-relaxed text-slate-400">
              Integration layer for OTOBO, Znuny/OTRS, and Zammad. Setup, connectors, automation
              rules, API, and troubleshooting.
            </p>
            <div class="flex items-center gap-2 text-sm font-semibold text-primary">
              <span>Open Automation Docs</span>
              <svg
                class="h-5 w-5 transition-transform group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
              </svg>
            </div>
          </Card>
        </a>

        <a
          href={getRelativeLocaleUrl(Astro.currentLocale || 'en', 'docs/ticket-tagging')}
          class="group relative block"
        >
          <Card variant="outline" radius="2xl" hoverable elevation="lg" client:load>
            <div class="mb-4 flex items-center gap-4">
              <div
                class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 transition-colors group-hover:bg-primary/20"
              >
                <svg
                  class="h-8 w-8 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"
                  ></path>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"
                  ></path>
                </svg>
              </div>
            </div>
            <h3
              class="mb-3 text-2xl font-bold text-white transition-colors group-hover:text-primary"
            >
              Tagging AI Docs
            </h3>
            <p class="mb-4 leading-relaxed text-slate-400">
              On-prem ticket classification. Tag schema, output format, multilingual behavior,
              backlog tagging, hardware sizing, and evaluation.
            </p>
            <div class="flex items-center gap-2 text-sm font-semibold text-primary">
              <span>Open Tagging AI Docs</span>
              <svg
                class="h-5 w-5 transition-transform group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
              </svg>
            </div>
          </Card>
        </a>
      </div>

      {
        enrichedGroups.length > 0 && (
          <div class="mt-24 border-t border-slate-800 pt-16">
            <h4 class="mb-12 text-center text-sm font-bold uppercase tracking-[0.2em] text-slate-500">
              {popularResources?.title}
            </h4>

            <div class="space-y-12">
              {enrichedGroups.map(group => (
                <div>
                  <h5 class="mb-6 text-lg font-bold text-slate-400">{group.title}</h5>
                  <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    {group.items.map(item => (
                      <a
                        href={getRelativeLocaleUrl(Astro.currentLocale || 'en', item.url)}
                        class="group flex flex-col items-center gap-3 rounded-xl border border-slate-800 bg-slate-900/30 p-6 transition-all duration-300 hover:border-primary/40 hover:bg-slate-900/50"
                      >
                        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/5 transition-colors group-hover:bg-primary/10">
                          <Icon name={item.iconName} class="h-6 w-6 text-primary" />
                        </div>
                        <span class="text-center text-sm font-medium text-slate-300 transition-colors group-hover:text-white">
                          {item.title}
                        </span>
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </div>
</BaseLayout>
