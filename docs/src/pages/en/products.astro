---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/vue/core/basic/Badge.vue';
import Button from '../../components/vue/core/basic/Button.vue';
import Card from '../../components/vue/core/basic/Card.vue';
import ModalTrigger from '../../components/vue/core/basic/ModalTrigger.vue';
import ContactForm from '../../components/ContactForm.astro';
import { Icon } from 'astro-icon/components';

const title = 'Products - Open Ticket AI';

// Get current locale and fetch products content
const currentLocale = Astro.currentLocale?.toLowerCase() || 'en';
const allProducts = await getCollection('products');
const productsEntry = allProducts.find(entry =>
  entry.id.toLowerCase().startsWith(`${currentLocale}/`)
);

if (!productsEntry) {
  throw new Error(`Products content not found for locale: ${currentLocale}`);
}

const { hero, capabilities, editions, deployment, finalCta } = productsEntry.data;
---

<BaseLayout
  title={title}
  description="Open Ticket AI Product Suite - Automated Ticket Classification"
>
  <div slot="head"></div>

  <div class="min-h-screen bg-background-dark">
    <!-- Hero Section - Live Classification Engine -->
    <section class="relative w-full overflow-hidden px-4 py-20 md:px-10 lg:px-20 xl:px-40">
      <div class="absolute -right-32 -top-32 h-96 w-96 rounded-full bg-primary/10 blur-[120px]">
      </div>
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-8">
          <Badge tone="primary" client:load>{hero.badge}</Badge>
        </div>

        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
          <!-- Left Content -->
          <div class="flex flex-col gap-8">
            <h1
              class="font-display text-5xl font-black leading-tight text-white md:text-6xl lg:text-7xl"
            >
              {hero.title.line1}<br />
              {hero.title.line2}<br />
              {hero.title.line3}<br />
              <span class="bg-gradient-to-r from-primary to-cyan-400 bg-clip-text text-transparent">
                {hero.title.highlight}
              </span>
            </h1>

            <p class="max-w-xl text-xl leading-relaxed text-text-dim">
              {hero.description}
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <ModalTrigger
                title="Contact Sales"
                buttonText={hero.cta.primary}
                buttonVariant="surface"
                buttonTone="primary"
                buttonSize="lg"
                client:load
              >
                <ContactForm
                  title="Contact Sales"
                  submitButtonText="Submit"
                  messageLabel="Message"
                  emailLabel="Email"
                  subjectLabel="Subject"
                  emailPlaceholder="your@email.com"
                  messagePlaceholder="How can we help you?"
                  successActionUrl="/success/contact-sales"
                  name="contact-sales"
                />
              </ModalTrigger>
              <Button
                href={getRelativeLocaleUrl(Astro.currentLocale || 'en', 'products/roi-calculator')}
                variant="outline"
                size="lg"
                client:load
              >
                {hero.cta.secondary}
              </Button>
            </div>
          </div>

          <!-- Right Side - Terminal Demo -->
          <div class="relative">
            <div
              class="overflow-hidden rounded-2xl border border-surface-lighter bg-[#0c0d15] shadow-2xl"
            >
              <div
                class="flex items-center gap-2 border-b border-surface-lighter bg-surface-dark/80 px-4 py-3"
              >
                <div class="flex gap-2">
                  <div class="h-3 w-3 rounded-full bg-danger"></div>
                  <div class="h-3 w-3 rounded-full bg-warning"></div>
                  <div class="h-3 w-3 rounded-full bg-success"></div>
                </div>
                <span class="ml-4 font-mono text-sm text-text-dim">{hero.demo.title}</span>
              </div>

              <div class="space-y-6 p-6 font-mono text-sm">
                <div class="space-y-3">
                  <div class="text-muted">{hero.demo.input.label}</div>
                  <div class="rounded-lg border border-border-dark bg-surface-dark/50 p-4">
                    <p class="mb-2 text-text-1">
                      <span class="text-cyan-glow">Subject:</span> {hero.demo.input.subject}
                    </p>
                    <p class="text-text-1"><span class="text-cyan-glow">Body:</span></p>
                    <p class="mt-1 text-xs leading-relaxed text-text-dim" style="white-space: pre-line;">
                      {hero.demo.input.body}
                    </p>
                  </div>
                </div>

                <div class="space-y-3">
                  <div class="font-bold text-primary">{hero.demo.output.label}</div>
                  <div class="space-y-2">
                    {hero.demo.output.tags.map((tag) => (
                      <div class="flex items-center gap-2">
                        <span class="text-muted">{tag.key}:</span>
                        <span
                          class={`rounded-md border px-3 py-1 text-xs ${
                            tag.color === 'primary'
                              ? 'border-primary/30 bg-primary/20 text-primary-light'
                              : tag.color === 'secondary'
                                ? 'border-secondary/30 bg-secondary/20 text-cyan-glow'
                                : 'border-danger/30 bg-danger/20 text-danger'
                          }`}
                        >
                          {tag.value}
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Capabilities -->
    <section class="w-full bg-surface-dark/30 px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-white md:text-5xl">{capabilities.title}</h2>
          <p class="mx-auto max-w-2xl text-lg text-text-dim">
            {capabilities.subtitle}
          </p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          {capabilities.items.map((item) => (
            <Card variant="outline" hoverable={true} radius="2xl" client:load>
              <div class="flex flex-col gap-4">
                <div class="flex items-center gap-3">
                  <Icon
                    name={item.icon}
                    class="h-10 w-10 text-primary transition-transform group-hover:scale-110"
                  />
                </div>
                <h3 class="text-2xl font-bold text-white">{item.title}</h3>
                <p class="text-base leading-relaxed text-text-dim">
                  {item.description}
                </p>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Flexible Editions -->
    <section class="w-full bg-surface-dark/30 px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-4xl font-bold text-white md:text-5xl">{editions.title}</h2>
          <p class="mx-auto max-w-2xl text-lg text-text-dim">
            {editions.subtitle}
          </p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          {editions.items.map((edition) => (
            edition.highlighted ? (
              <div class="relative">
                {edition.badge && (
                  <div class="absolute -top-4 left-1/2 z-10 -translate-x-1/2">
                    <Badge tone="primary" client:load>{edition.badge}</Badge>
                  </div>
                )}

                <Card
                  variant="outline"
                  tone="primary"
                  radius="2xl"
                  hoverable={true}
                  size="lg"
                  elevation="lg"
                  client:load
                  class="scale-105 transform"
                >
                  <div class="flex h-full flex-col">
                    <div class="flex-1">
                      <h3 class="mb-2 text-2xl font-bold text-white">{edition.name}</h3>
                      <p class="mb-6 text-sm text-primary-light">{edition.subtitle}</p>

                      <div class="mb-8">
                        <div class="mb-2 text-5xl font-bold text-white">
                          {edition.price.toLocaleString()} {edition.currency}
                          <span class="text-lg font-normal text-text-dim">{edition.priceUnit}</span>
                        </div>
                      </div>

                      <ul class="mb-8 space-y-3">
                        {edition.features.map((feature) => (
                          <li class="flex items-start gap-3">
                            <svg
                              class="mt-0.5 h-5 w-5 flex-shrink-0 text-success"
                              fill="currentColor"
                              viewBox="0 0 20 20"
                            >
                              <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                            </svg>
                            <span class="font-medium text-white">{feature}</span>
                          </li>
                        ))}
                      </ul>

                      <p class="mb-6 text-sm text-primary-light">{edition.availability}</p>
                    </div>

                    <Button
                      variant="surface"
                      size="md"
                      class="w-full"
                      href={getRelativeLocaleUrl(
                        Astro.currentLocale || 'en',
                        `products/${edition.slug}`
                      )}
                      client:load
                    >
                      {edition.ctaText}
                    </Button>
                  </div>
                </Card>
              </div>
            ) : (
              <Card variant="outline" radius="2xl" hoverable={true} size="lg" client:load>
                <div class="flex h-full flex-col">
                  <div class="flex-1">
                    <h3 class="mb-2 text-2xl font-bold text-white">{edition.name}</h3>
                    <p class="mb-6 text-sm text-muted">{edition.subtitle}</p>

                    <div class="mb-8">
                      <div class="mb-2 text-5xl font-bold text-white">
                        {edition.price.toLocaleString()} {edition.currency}
                        <span class="text-lg font-normal text-muted">{edition.priceUnit}</span>
                      </div>
                    </div>

                    <ul class="mb-8 space-y-3">
                      {edition.features.map((feature) => (
                        <li class="flex items-start gap-3">
                          <svg
                            class="mt-0.5 h-5 w-5 flex-shrink-0 text-success"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"></path>
                          </svg>
                          <span class="text-text-1">{feature}</span>
                        </li>
                      ))}
                    </ul>

                    <p class="mb-6 text-sm text-muted">{edition.availability}</p>
                  </div>

                  <Button
                    variant="outline"
                    size="md"
                    class="w-full"
                    href={getRelativeLocaleUrl(
                      Astro.currentLocale || 'en',
                      `products/${edition.slug}`
                    )}
                    client:load
                  >
                    {edition.ctaText}
                  </Button>
                </div>
              </Card>
            )
          ))}
        </div>

        <!-- ROI Simulator CTA -->
        <div class="mt-12 text-center">
          <a
            href={getRelativeLocaleUrl(Astro.currentLocale || 'en', editions.roiCta.url)}
            class="group inline-flex items-center gap-3 rounded-xl border border-primary/50 bg-surface-dark px-8 py-4 transition-all hover:bg-primary/10"
          >
            <Icon name={editions.roiCta.icon} class="h-6 w-6 text-primary" />
            <span class="text-lg font-bold text-white">{editions.roiCta.text}</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Deployment & Hardware Flexibility -->
    <section class="w-full px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16">
          <h2 class="mb-6 text-4xl font-bold text-white md:text-5xl">
            {deployment.title}
          </h2>
          <p class="max-w-3xl text-lg text-text-dim">
            {deployment.subtitle}
          </p>
        </div>

        <div class="mb-16 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
          {deployment.features.map((feature) => (
            <Card variant="outline" radius="xl" client:load>
              <div class="flex items-start gap-3">
                <Icon name={feature.icon} class="mt-1 h-6 w-6 flex-shrink-0 text-primary" />
                <div>
                  <h4 class="mb-1 font-bold text-white">{feature.title}</h4>
                </div>
              </div>
            </Card>
          ))}
        </div>

        <!-- Large CTA -->
        <div
          class="relative overflow-hidden rounded-3xl border border-primary/30 bg-gradient-to-br from-primary/10 via-surface-dark to-cyan-500/5 p-16 text-center"
        >
          <div
            class="absolute left-1/2 top-1/2 h-96 w-96 -translate-x-1/2 -translate-y-1/2 rounded-full bg-primary/10 blur-[120px]"
          >
          </div>

          <div class="relative z-10">
            <div
              class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-2xl bg-gradient-to-br from-primary to-cyan-500"
            >
              <Icon name={finalCta.icon} class="h-10 w-10 text-white" />
            </div>

            <h2 class="mb-6 text-4xl font-bold text-white md:text-6xl">
              {finalCta.title.line1}<br />
              <span class="bg-gradient-to-r from-primary to-cyan-400 bg-clip-text text-transparent">
                {finalCta.title.highlight}
              </span>
            </h2>

            <p class="mx-auto mb-10 max-w-3xl text-xl text-text-dim">
              {finalCta.subtitle}
            </p>

            <div class="flex flex-wrap justify-center gap-4">
              <ModalTrigger
                title="Contact Sales"
                buttonText={finalCta.buttons.primary}
                buttonVariant="surface"
                buttonTone="primary"
                buttonSize="lg"
                client:load
              >
                <ContactForm
                  title="Contact Sales"
                  submitButtonText="Submit"
                  messageLabel="Message"
                  emailLabel="Email"
                  subjectLabel="Subject"
                  emailPlaceholder="your@email.com"
                  messagePlaceholder="How can we help you?"
                  successActionUrl="/success/contact-sales"
                  name="contact-sales"
                />
              </ModalTrigger>
              <Button
                href={getRelativeLocaleUrl(Astro.currentLocale || 'en', 'docs')}
                variant="outline"
                size="lg"
                client:load
              >
                {finalCta.buttons.secondary}
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
