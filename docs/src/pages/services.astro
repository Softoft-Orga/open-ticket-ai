---
import ServiceCard from '../components/services/ServiceCard.astro';
import Extension from '../components/services/Extension.astro';

const title = 'Services - Open Ticket AI';
const description = 'Professional services for Open Ticket AI integration and support';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #0b1220;
      color: #e2e8f0;
      line-height: 1.6;
    }
    
    :root {
      --primary: #646cff;
      --secondary: #41d1ff;
      --background-dark: #0b1220;
      --card-dark: #111827;
      --green-500: #22c55e;
    }
    
    .bg-background-dark {
      background-color: var(--background-dark);
    }
    
    .bg-card-dark\/50 {
      background-color: rgba(17, 24, 39, 0.5);
    }
    
    .bg-cyber-grid {
      background-image: 
        linear-gradient(rgba(100, 108, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(100, 108, 255, 0.1) 1px, transparent 1px);
      background-size: 50px 50px;
    }
    
    .text-primary {
      color: var(--primary);
    }
    
    .text-secondary {
      color: var(--secondary);
    }
    
    .border-primary {
      border-color: var(--primary);
    }
    
    .border-primary\/40 {
      border-color: rgba(100, 108, 255, 0.4);
    }
    
    .border-primary\/30 {
      border-color: rgba(100, 108, 255, 0.3);
    }
    
    .border-secondary\/40 {
      border-color: rgba(65, 209, 255, 0.4);
    }
    
    .bg-primary {
      background-color: var(--primary);
    }
    
    .bg-primary\/5 {
      background-color: rgba(100, 108, 255, 0.05);
    }
    
    .bg-primary\/10 {
      background-color: rgba(100, 108, 255, 0.1);
    }
    
    .bg-primary\/90 {
      background-color: rgba(100, 108, 255, 0.9);
    }
    
    .shadow-primary\/20 {
      --tw-shadow-color: rgba(100, 108, 255, 0.2);
      --tw-shadow: var(--tw-shadow-colored);
    }
    
    .shadow-primary\/30 {
      --tw-shadow-color: rgba(100, 108, 255, 0.3);
      --tw-shadow: var(--tw-shadow-colored);
    }
    
    .text-transparent {
      color: transparent;
    }
    
    .bg-clip-text {
      background-clip: text;
      -webkit-background-clip: text;
    }
    
    .bg-gradient-to-r {
      background-image: linear-gradient(to right, var(--tw-gradient-stops));
    }
    
    .from-primary {
      --tw-gradient-from: var(--primary);
      --tw-gradient-to: rgba(100, 108, 255, 0);
      --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    }
    
    .to-secondary {
      --tw-gradient-to: var(--secondary);
    }
    
    /* Grid layouts */
    .services-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    @media (min-width: 1024px) {
      .services-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    .extensions-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    @media (min-width: 768px) {
      .extensions-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (min-width: 1024px) {
      .extensions-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }
    
    .hourly-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    @media (min-width: 768px) {
      .hourly-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    /* Utility classes */
    .container {
      max-width: 80rem;
      margin-left: auto;
      margin-right: auto;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
    
    .section {
      padding-top: 6rem;
      padding-bottom: 6rem;
    }
    
    .hero-section {
      position: relative;
      overflow: hidden;
      padding-top: 6rem;
      padding-bottom: 6rem;
      text-align: center;
    }
    
    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border-radius: 9999px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background-color: rgba(255, 255, 255, 0.05);
      padding: 0.375rem 1rem;
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 2rem;
    }
    
    .hero-badge-dot {
      display: flex;
      height: 0.5rem;
      width: 0.5rem;
      border-radius: 9999px;
      background-color: var(--green-500);
    }
    
    .hero-title {
      max-width: 56rem;
      margin-left: auto;
      margin-right: auto;
      font-size: 3.75rem;
      font-weight: 900;
      color: white;
      letter-spacing: -0.025em;
      margin-bottom: 2rem;
      line-height: 1.1;
    }
    
    @media (min-width: 640px) {
      .hero-title {
        font-size: 4.5rem;
      }
    }
    
    @media (min-width: 1024px) {
      .hero-title {
        font-size: 6rem;
      }
    }
    
    .hero-gradient-text {
      color: transparent;
      background-clip: text;
      -webkit-background-clip: text;
      background-image: linear-gradient(to right, var(--primary), var(--secondary));
    }
    
    .hero-subtitle {
      max-width: 42rem;
      margin-left: auto;
      margin-right: auto;
      font-size: 1.25rem;
      color: #94a3b8;
      line-height: 1.75;
    }
    
    .section-header {
      margin-bottom: 5rem;
      text-align: center;
    }
    
    .section-title {
      font-size: 2.25rem;
      font-weight: 700;
      color: white;
      margin-bottom: 1rem;
    }
    
    .section-subtitle {
      color: #94a3b8;
      font-size: 1.125rem;
    }
    
    .extension-box {
      border-radius: 1.5rem;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background-color: rgba(255, 255, 255, 0.02);
      padding: 3rem;
    }
    
    .extension-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: white;
      margin-bottom: 3rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .extension-icon-box {
      display: flex;
      height: 2.5rem;
      width: 2.5rem;
      align-items: center;
      justify-content: center;
      border-radius: 0.75rem;
      background-color: rgba(255, 255, 255, 0.05);
      color: var(--primary);
      font-size: 1.5rem;
    }
    
    .hourly-card {
      border-radius: 1.5rem;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background-color: rgba(17, 24, 39, 0.5);
      padding: 2.5rem;
      display: flex;
      flex-direction: column;
      transition: all 0.3s;
    }
    
    .hourly-card:hover {
      border-color: rgba(100, 108, 255, 0.4);
    }
    
    .hourly-card.support:hover {
      border-color: rgba(65, 209, 255, 0.4);
    }
    
    .hourly-icon {
      padding: 0.75rem;
      border-radius: 1rem;
      font-size: 1.875rem;
    }
    
    .hourly-icon.engineering {
      background-color: rgba(59, 130, 246, 0.1);
      color: #60a5fa;
    }
    
    .hourly-icon.support {
      background-color: rgba(65, 209, 255, 0.1);
      color: var(--secondary);
    }
    
    .hourly-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: white;
    }
    
    .hourly-desc {
      color: #94a3b8;
      font-size: 1.125rem;
      margin-bottom: 2.5rem;
      flex-grow: 1;
    }
    
    .hourly-footer {
      border-top: 1px solid rgba(255, 255, 255, 0.05);
      padding-top: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .hourly-label {
      color: #94a3b8;
      font-weight: 500;
    }
    
    .hourly-price {
      font-size: 1.875rem;
      font-weight: 700;
      color: white;
    }
    
    .hourly-price-unit {
      font-size: 1rem;
      font-weight: 400;
      color: #64748b;
    }
  </style>
</head>
<body>
  <div class="bg-background-dark" style="min-height: 100vh;">
    <section class="hero-section">
      <div class="bg-cyber-grid" style="position: absolute; inset: 0; opacity: 0.1; pointer-events: none;"></div>
      <div class="container">
        <div class="hero-badge">
          <span class="hero-badge-dot"></span>
          German Engineering Precision
        </div>
        <h1 class="hero-title">
          We Don't Just Build AI. <br/>
          <span class="hero-gradient-text">We Integrate It.</span>
        </h1>
        <p class="hero-subtitle">
          Transparent, fixed-price packages for enterprise-grade helpdesk automation. 
          From self-hosted AI models to full workflow automation.
        </p>
      </div>
    </section>

    <!-- Pricing Grid -->
    <section class="section" style="border-top: 1px solid rgba(255, 255, 255, 0.05);">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Integration Services</h2>
          <p class="section-subtitle">Choose the package that fits your operational complexity.</p>
        </div>
        
        <div class="services-grid">
          <ServiceCard 
            title="Standard Stack"
            price="3.000 ‚Ç¨"
            features={[
              "Up to 20,000 synthetic tickets",
              "Weighted multilingual generation",
              "Core ticket fields setup",
              "Realistic distributions",
              "JSONL or CSV delivery"
            ]}
            badge="Evaluation & Testing"
          />
          <ServiceCard 
            title="High Volume Training"
            price="7.500 ‚Ç¨"
            features={[
              "50k‚Äì100k tickets dataset",
              "Custom schema (queues, SLAs)",
              "Controlled label distributions",
              "Multilingual expansion",
              "1 revision round included"
            ]}
            badge="Production Ready"
            highlighted={true}
          />
          <ServiceCard 
            title="Complex Use Cases"
            price="15.000 ‚Ç¨"
            features={[
              "100k‚Äì500k+ tickets dataset",
              "Strict balancing & constraints",
              "Realistic noise modeling",
              "Optional agent replies",
              "Full documentation & splits"
            ]}
            badge="Enterprise Strategy"
          />
        </div>
      </div>
    </section>

    <!-- Extensions -->
    <section class="section" style="border-top: 1px solid rgba(255, 255, 255, 0.05);">
      <div class="container">
        <div class="extension-box">
          <h3 class="extension-title">
            <span class="extension-icon-box">
              üß©
            </span>
            Common Extensions
          </h3>
          <div class="extensions-grid">
            <Extension icon="tune" title="Fine-tuned Model" desc="Deliver a tagging model specifically fine-tuned on the generated dataset." />
            <Extension icon="analytics" title="Evaluation Report" desc="Comprehensive metrics report on model performance using the dataset." />
            <Extension icon="integration_instructions" title="System Tuning" desc="Specific format tuning for import into OTOBO, Znuny, or Zammad systems." />
            <Extension icon="update" title="Ongoing Updates" desc="Periodic dataset refreshes to match evolving business logic." />
          </div>
        </div>
      </div>
    </section>

    <!-- Hourly / Subscription -->
    <section class="section">
      <div class="container">
        <div class="hourly-grid">
          <div class="hourly-card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
              <div class="hourly-icon engineering">
                ‚è±Ô∏è
              </div>
              <h3 class="hourly-title">Hourly Engineering</h3>
            </div>
            <p class="hourly-desc">
              For extra changes beyond package scope, custom features/workflows, troubleshooting, and migrations.
            </p>
            <div class="hourly-footer">
              <span class="hourly-label">Remote Rate</span>
              <span class="hourly-price">200 ‚Ç¨ <span class="hourly-price-unit">/hour</span></span>
            </div>
          </div>
          
          <div class="hourly-card support">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
              <div class="hourly-icon support">
                üéß
              </div>
              <h3 class="hourly-title">Ongoing Support</h3>
            </div>
            <p class="hourly-desc">
              Best-effort subscription for reliable coverage. Includes async support via ticket/email and minor fixes.
            </p>
            <div class="hourly-footer">
              <span class="hourly-label">Subscription</span>
              <span class="hourly-price">400 ‚Ç¨ <span class="hourly-price-unit">/month</span></span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</body>
</html>
