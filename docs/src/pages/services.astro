---
import {getCollection} from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PricingCard from '../components/vue/services/PricingCard.vue';
import IntegrationPackageCard from '../components/vue/services/IntegrationPackageCard.vue';
import ExtensionItem from '../components/vue/services/ExtensionItem.vue';
import {
    CubeTransparentIcon,
    ServerIcon,
    ArrowPathRoundedSquareIcon,
    CircleStackIcon,
    ArchiveBoxIcon,
    SparklesIcon,
    ArrowRightIcon,
    CheckIcon,
    CheckCircleIcon,
    CpuChipIcon,
    DocumentTextIcon,
    ClockIcon,
    UserGroupIcon
} from '@heroicons/vue/24/outline';

const title = 'Services - Open Ticket AI';
const description = 'Professional services for Open Ticket AI integration and support';

// Get all services from the content collection
const allServices = await getCollection('services');

// Filter services by group
const syntheticDataServices = allServices
    .filter(s => s.data.serviceGroup === 'Synthetic Data Creation')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

const extensions = allServices
    .filter(s => s.data.serviceGroup === 'Extensions')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

const integrationServices = allServices
    .filter(s => s.data.serviceGroup === 'Integration')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

const automationServices = allServices
    .filter(s => s.data.serviceGroup === 'Automation')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

const modelDevelopmentServices = allServices
    .filter(s => s.data.serviceGroup === 'Model Development')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

const flexibleServices = allServices
    .filter(s => s.data.serviceGroup === 'Flexible')
    .sort((a, b) => (a.data.serviceOrder || 0) - (b.data.serviceOrder || 0));

// Helper function to format price
function formatPrice(price: number | undefined): string {
    if (!price || price === 0) return 'On Request';
    return `${price.toLocaleString('de-DE')} â‚¬`;
}

// Helper function to determine if highlighted (middle service)
function isHighlighted(index: number, total: number): boolean {
    return total === 3 && index === 1;
}

// Helper function to get integration service display info
function getIntegrationServiceInfo(slug: string): { subtitle: string; systems: string } {
    const mapping: Record<string, { subtitle: string; systems: string }> = {
        'integration-standard-stack': {
            subtitle: 'Standard Stack',
            systems: 'OTOBO, Znuny (OTRS stack), Zammad'
        },
        'integration-enterprise-custom': {
            subtitle: 'Enterprise / Custom',
            systems: 'Jira Service Management, Zendesk, Freshdesk, ServiceNow, Custom'
        }
    };
    return mapping[slug] || {subtitle: '', systems: ''};
}

// Map icon names for extensions
const extensionIcons: Record<string, string> = {
    'fine-tuned-model': 'tune',
    'evaluation-report': 'analytics',
    'system-tuning': 'integration_instructions',
    'ongoing-updates': 'update',
};

// Typical scope items for model development
const typicalScopeItems = [
    {
        icon: 'psychology',
        title: 'Tag Definition',
        desc: 'Taxonomy design, custom tag definitions, or mapping your structure with our standard ontology.'
    },
    {
        icon: 'hub',
        title: 'Dataset Strategy',
        desc: 'Balancing synthetic vs real data, handling multiple languages, and covering edge cases.'
    },
    {
        icon: 'verified',
        title: 'Training & Evaluation',
        desc: 'Full model training cycles with rigorous acceptance tests and performance validation.'
    },
    {
        icon: 'rocket_launch',
        title: 'Packaging & Deployment',
        desc: 'Guidance for self-hosted inference setup, containerization, and update strategies.'
    }
];
---

<BaseLayout title={title} description={description}>
    <div class="min-h-screen bg-background-dark pb-32">
        <!-- Hero -->
        <section class="relative pt-24 pb-20 text-center">
            <div class="mx-auto max-w-7xl px-6">
                <div
                    class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-1.5 text-xs font-bold text-primary mb-8">
                    <span class="flex h-2 w-2 rounded-full bg-green-500"></span>
                    German Engineering Precision
                </div>
                <h1 class="mx-auto max-w-4xl text-6xl font-black text-white sm:text-7xl lg:text-8xl tracking-tighter mb-8 leading-[0.9]">
                    We Don't Just Build AI. <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-400">We Integrate It.</span>
                </h1>
                <p class="mx-auto max-w-2xl text-xl text-slate-400 leading-relaxed font-medium">
                    Transparent, fixed-price packages for enterprise-grade helpdesk automation.
                    From self-hosted AI models to full workflow automation.
                </p>
            </div>
        </section>

        <!-- Ticket Tagging AI Model Section -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="bg-[#120818] border border-white/5 rounded-3xl p-10 flex flex-col lg:flex-row gap-16">
                <div class="lg:w-2/3">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="p-2 rounded-lg bg-primary/10 text-primary">
                            <CubeTransparentIcon class="w-8 h-8" aria-hidden="true"/>
                        </div>
                        <h2 class="text-3xl font-bold text-white">Ticket Tagging AI Model</h2>
                    </div>
                    <p class="text-slate-400 text-lg mb-10 max-w-2xl leading-relaxed">
                        Our core AI model designed for the automatic classification and tagging of helpdesk tickets.
                        It processes incoming requests to instantly identify critical metadata before a human even sees
                        the ticket.
                    </p>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="flex items-center gap-3 text-slate-300">
                            <div class="size-2 rounded-full bg-primary"></div>
                            <span class="font-bold">Category & Topic</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300">
                            <div class="size-2 rounded-full bg-primary"></div>
                            <span class="font-bold">Intent Recognition</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300">
                            <div class="size-2 rounded-full bg-primary"></div>
                            <span class="font-bold">Impact, Urgency & Priority</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300">
                            <div class="size-2 rounded-full bg-primary"></div>
                            <span class="font-bold">Routing Hints</span>
                        </div>
                    </div>
                </div>
                <div class="lg:w-1/3 flex flex-col gap-4">
                    <div class="text-slate-500 text-xs font-bold uppercase tracking-widest mb-2">Deployment &
                        Integration
                    </div>
                    <div class="bg-[#1a101f] border border-white/5 rounded-xl p-4 flex gap-4 items-start">
                        <ServerIcon class="w-6 h-6 text-primary flex-shrink-0" aria-hidden="true"/>
                        <div>
                            <h4 class="text-white text-sm font-bold">Self-Hosted</h4>
                            <p class="text-slate-500 text-[11px] leading-tight">Full on-premise deployment. No data
                                leaves your secure infrastructure.</p>
                        </div>
                    </div>
                    <div class="bg-[#1a101f] border border-white/5 rounded-xl p-4 flex gap-4 items-start">
                        <ArrowPathRoundedSquareIcon class="w-6 h-6 text-primary flex-shrink-0" aria-hidden="true"/>
                        <div>
                            <h4 class="text-white text-sm font-bold">Auto Write-Back</h4>
                            <p class="text-slate-500 text-[11px] leading-tight">Deep integration with ticket systems to
                                automatically write back tags and fields.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Synthetic Data Generation -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="text-center mb-16">
                <div
                    class="inline-flex items-center gap-2 rounded-full bg-cyan-400/10 border border-cyan-400/20 px-3 py-1 text-[10px] font-black uppercase text-cyan-400 mb-6">
                    <CircleStackIcon class="w-3 h-3" aria-hidden="true"/>
                    Data Generation
                </div>
                <h2 class="text-5xl font-black text-white mb-6 tracking-tight">Synthetic Data Generation</h2>
                <p class="text-slate-400 text-lg max-w-3xl mx-auto leading-relaxed">
                    Custom, realistic, multilingual support-ticket datasets for AI training, evaluation, and
                    benchmarking.
                    No sensitive customer data exposed.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
                {syntheticDataServices.map((service, index) => (
                    <PricingCard
                        client:load
                        title={service.data.title}
                        subtitle={service.data.oneLiner}
                        price={formatPrice(service.data.startingPrice)}
                        features={service.data.outcomes || []}
                        highlighted={isHighlighted(index, syntheticDataServices.length)}
                        buttonText={index === 1 ? "Get Demo" : "Contact Sales"}
                    />
                ))}
            </div>

            <!-- Common Extensions -->
            <div class="bg-[#0a060d] border border-white/5 rounded-2xl p-8">
                <div class="flex items-center gap-3 mb-8">
                    <ArchiveBoxIcon class="w-6 h-6 text-slate-500" aria-hidden="true"/>
                    <h3 class="text-slate-400 text-sm font-bold uppercase tracking-widest">Common Extensions <span
                        class="text-slate-600 font-normal">(Add-ons)</span></h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
                    {extensions.map((extension) => (
                        <ExtensionItem
                            client:load
                            icon={extensionIcons[extension.data.slug] || 'tune'}
                            title={extension.data.title}
                            desc={extension.data.description || extension.data.oneLiner || ''}
                        />
                    ))}
                </div>
            </div>
        </section>

        <!-- Integration Services -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="text-center mb-16">
                <h2 class="text-5xl font-black text-white mb-6">Integration Services</h2>
                <p class="text-slate-400 text-lg">Fixed-price packages to connect Open Ticket AI with your existing
                    ecosystem.</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {integrationServices.map((service, index) => {
                    const info = getIntegrationServiceInfo(service.data.slug);
                    return (
                        <IntegrationPackageCard
                            client:load
                            title="Integration Package"
                            subtitle={info.subtitle}
                            price={formatPrice(service.data.startingPrice)}
                            systems={info.systems}
                            buttonText={index === 1 ? "Get Demo" : "Contact Sales"}
                            features={service.data.outcomes || []}
                            highlighted={index === 1}
                        />
                    );
                })}
            </div>
            <div class="mt-8 text-center bg-red-500/5 border border-red-500/10 rounded-xl py-3">
                <p class="text-xs font-bold uppercase tracking-widest text-red-500/60">
                    Out of Scope <span class="text-red-500">(Billed Hourly):</span> Multi-instance rollouts, complex
                    field transformations, custom UI work, deep customization, and bespoke workflows.
                </p>
            </div>
        </section>

        <!-- Automation Services (OTA) -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
                <div class="lg:col-span-5">
                    <div
                        class="inline-flex items-center gap-2 rounded-lg bg-purple-500/10 border border-purple-500/20 px-3 py-1 text-[10px] font-black uppercase text-purple-400 mb-6">
                        <SparklesIcon class="w-3 h-3" aria-hidden="true"/>
                        Automation Engine
                    </div>
                    <h2 class="text-5xl font-black text-white mb-6">Automation Services</h2>
                    <h3 class="text-xl font-bold text-slate-200 mb-6">Open Ticket Automation (OTA)</h3>
                    <p class="text-slate-400 text-lg leading-relaxed mb-8">
                        OTA is our open-source layer that translates AI tags into concrete actions. It bridges the gap
                        between intelligence and resolution.
                    </p>
                    <ul class="space-y-4">
                        {['Routing & Assignments', 'Priority & SLA Updates', 'Auto-replies & Notes', 'Triggering Tasks'].map((item) => (
                            <li class="flex items-center gap-3 text-slate-300 font-bold">
                                <ArrowRightIcon class="w-5 h-5 text-primary" aria-hidden="true"/>
                                {item}
                            </li>
                        ))}
                    </ul>
                </div>
                <div class="lg:col-span-7">
                    {automationServices.map((service) => (
                        <div class="bg-[#1a101f] border border-primary/20 rounded-2xl p-8">
                            <div class="flex justify-between items-start mb-10 pb-6 border-b border-white/5">
                                <div>
                                    <h4 class="text-white text-xl font-bold">{service.data.title}</h4>
                                    <p class="text-slate-500 text-xs mt-1">{service.data.oneLiner}</p>
                                </div>
                                <div class="text-right">
                                    <div
                                        class="text-3xl font-bold text-white">{formatPrice(service.data.startingPrice)}</div>
                                    <div class="text-[10px] text-slate-500 uppercase">One-time</div>
                                </div>
                            </div>

                            <div>
                                <div class="text-[10px] text-white uppercase font-black mb-4">What's included</div>
                                <ul class="space-y-3">
                                    {(service.data.outcomes || []).map((item) => (
                                        <li class="flex items-start gap-2.5 text-xs text-slate-400">
                                            <CheckIcon class="w-4 h-4 text-primary flex-shrink-0 mt-0.5"
                                                       aria-hidden="true"/>
                                            <span>{item}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Model Development -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="text-center mb-16">
                <div
                    class="inline-flex items-center gap-2 rounded-full bg-purple-500/10 border border-purple-500/20 px-3 py-1 text-[10px] font-black uppercase text-purple-400 mb-6">
                    <CpuChipIcon class="w-3 h-3" aria-hidden="true"/>
                    Intelligence Layer
                </div>
                <h2 class="text-5xl font-black text-white mb-6">Model Development <span
                    class="text-slate-500 font-medium">(Custom Tagging Models)</span></h2>
                <p class="text-slate-400 text-lg">Custom training and architecture for specialized tagging
                    requirements.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
                {modelDevelopmentServices.map((service, index) => {
                    if (index === 1) {
                        return (
                            <div
                                class="bg-gradient-to-r from-[#1a1a1a] to-[#0a0a0a] border border-primary/20 rounded-2xl p-8">
                                <div class="flex justify-between items-start mb-8">
                                    <div>
                                        <h4 class="text-white text-xl font-bold">{service.data.title}</h4>
                                        <p class="text-slate-500 text-xs mt-1">{service.data.oneLiner}</p>
                                    </div>
                                    <div class="text-right">
                                        <div
                                            class="text-3xl font-bold text-white">{formatPrice(service.data.startingPrice)}</div>
                                        <div class="text-[10px] text-slate-500 uppercase">One-time</div>
                                    </div>
                                </div>

                                <div class="space-y-4 mb-8">
                                    <div class="text-[10px] text-white uppercase font-black">Typical Scope</div>
                                    <ul class="space-y-3">
                                        {typicalScopeItems.map((item) => (
                                            <li class="flex items-start gap-2.5 text-xs text-slate-400">
                                                <CheckIcon class="w-4 h-4 text-primary flex-shrink-0 mt-0.5"
                                                           aria-hidden="true"/>
                                                <span>{item.title}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        );
                    }

                    return (
                        <div class="bg-[#1a101f] border border-primary/20 rounded-2xl p-8">
                            <div class="flex justify-between items-start mb-10 pb-6 border-b border-white/5">
                                <div>
                                    <h4 class="text-white text-xl font-bold">{service.data.title}</h4>
                                    <p class="text-slate-500 text-xs mt-1">{service.data.oneLiner}</p>
                                </div>
                                <div class="text-right">
                                    <div
                                        class="text-3xl font-bold text-white">{formatPrice(service.data.startingPrice)}</div>
                                    <div class="text-[10px] text-slate-500 uppercase">One-time</div>
                                </div>
                            </div>

                            <div>
                                <div class="text-[10px] text-white uppercase font-black mb-4">What's included</div>
                                <ul class="space-y-3">
                                    {(service.data.outcomes || []).map((item) => (
                                        <li class="flex items-start gap-2.5 text-xs text-slate-400">
                                            <CheckIcon class="w-4 h-4 text-primary flex-shrink-0 mt-0.5"
                                                       aria-hidden="true"/>
                                            <span>{item}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    );
                })}
            </div>
        </section>

        <!-- Flexible Services -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="text-center mb-16">
                <div
                    class="inline-flex items-center gap-2 rounded-full bg-[#007acc]/10 border border-[#007acc]/20 px-3 py-1 text-[10px] font-black uppercase text-[#007acc] mb-6">
                    <SparklesIcon class="w-3 h-3" aria-hidden="true"/>
                    Flexible Services
                </div>
                <h2 class="text-5xl font-black text-white mb-6">Flexible Services</h2>
                <p class="text-slate-400 text-lg max-w-3xl mx-auto leading-relaxed">
                    Tailored solutions and expert guidance for your unique automation needs.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {flexibleServices.map((service) => (
                    <div class="bg-[#1a101f] border border-primary/20 rounded-2xl p-8">
                        <div class="flex justify-between items-start mb-8">
                            <div>
                                <h4 class="text-white text-xl font-bold">{service.data.title}</h4>
                                <p class="text-slate-500 text-xs mt-1">{service.data.oneLiner}</p>
                            </div>
                            <div class="text-right">
                                <div
                                    class="text-3xl font-bold text-white">{formatPrice(service.data.startingPrice)}</div>
                                <div class="text-[10px] text-slate-500 uppercase">One-time</div>
                            </div>
                        </div>

                        <div class="space-y-4 mb-8">
                            <div class="text-[10px] text-white uppercase font-black">Typical Scope</div>
                            <ul class="space-y-3">
                                {typicalScopeItems.map((item) => (
                                    <li class="flex items-start gap-2.5 text-xs text-slate-400">
                                        <CheckIcon class="w-4 h-4 text-primary flex-shrink-0 mt-0.5"
                                                   aria-hidden="true"/>
                                        <span>{item.title}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="bg-black/20 rounded-xl p-4 border border-white/5">
                            <div class="text-[10px] text-white uppercase font-black mb-4">Need more?</div>
                            <p class="text-xs text-slate-400 mb-4">Custom requirements or additional features?</p>
                            <div class="flex justify-between items-center text-sm">
                                <span class="text-slate-300">Bespoke Development</span>
                                <span class="font-bold text-white">On Request</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</BaseLayout>

