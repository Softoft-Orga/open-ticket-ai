---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/services/ServiceCard.astro';
import Extension from '../components/services/Extension.astro';

const title = 'Services - Open Ticket AI';
const description = 'Professional services for Open Ticket AI integration and support';

// Get all services from the content collection
const allServices = await getCollection('services');

// Filter services by group
const mainServices = allServices
  .filter(s => s.data.nav?.group === 'Services')
  .sort((a, b) => (a.data.nav?.order || 0) - (b.data.nav?.order || 0));

const extensions = allServices
  .filter(s => s.data.nav?.group === 'Extensions')
  .sort((a, b) => (a.data.nav?.order || 0) - (b.data.nav?.order || 0));

const flexibleServices = allServices
  .filter(s => s.data.nav?.group === 'Flexible')
  .sort((a, b) => (a.data.nav?.order || 0) - (b.data.nav?.order || 0));

// Helper function to format price (using German locale to match original formatting)
function formatPrice(price: number | undefined): string {
  if (!price) return 'Custom';
  return `${price.toLocaleString('de-DE')} ‚Ç¨`;
}

// Helper function to determine if highlighted (middle service)
function isHighlighted(index: number, total: number): boolean {
  return total === 3 && index === 1;
}

// Map icon names for extensions
const extensionIcons: Record<string, string> = {
  'fine-tuned-model': 'tune',
  'evaluation-report': 'analytics',
  'system-tuning': 'integration_instructions',
  'ongoing-updates': 'update',
};
---

<BaseLayout title={title} description={description}>
  <div slot="head" />

  <div class="relative min-h-screen bg-background-dark">
    <section class="relative overflow-hidden py-20 sm:py-24">
      <div class="absolute inset-0 opacity-20 bg-cyber-grid pointer-events-none" aria-hidden="true"></div>
      <div class="absolute inset-0 bg-glow-radial opacity-80" aria-hidden="true"></div>
      <div class="relative mx-auto flex max-w-6xl flex-col items-center gap-6 px-6 text-center">
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-semibold text-primary">
          <span class="h-2 w-2 rounded-full bg-cyan-glow" aria-hidden="true"></span>
          German Engineering Precision
        </div>
        <h1 class="text-4xl font-black leading-tight tracking-tight text-white sm:text-5xl lg:text-6xl">
          We Don't Just Build AI. <br />
          <span class="bg-gradient-to-r from-primary to-cyan-glow bg-clip-text text-transparent">We Integrate It.</span>
        </h1>
        <p class="max-w-3xl text-lg leading-relaxed text-slate-300">
          Transparent, fixed-price packages for enterprise-grade helpdesk automation.
          From self-hosted AI models to full workflow automation.
        </p>
      </div>
    </section>

    <section class="border-t border-white/5 py-16 sm:py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="mb-12 text-center space-y-3">
          <h2 class="text-3xl font-bold text-white">Integration Services</h2>
          <p class="text-lg text-slate-300">Choose the package that fits your operational complexity.</p>
        </div>

        <div class="grid gap-10 lg:grid-cols-3">
          {mainServices.map((service, index) => (
            <ServiceCard
              title={service.data.title}
              price={formatPrice(service.data.startingPrice)}
              features={service.data.outcomes || []}
              badge={service.data.oneLiner || ''}
              highlighted={isHighlighted(index, mainServices.length)}
            />
          ))}
        </div>
      </div>
    </section>

    <section class="border-t border-white/5 py-16 sm:py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="rounded-2xl border border-white/10 bg-white/5 p-10 shadow-lg backdrop-blur">
          <h3 class="mb-10 flex items-center gap-4 text-2xl font-bold text-white">
            <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/10 text-xl text-primary" aria-hidden="true">üß©</span>
            Common Extensions
          </h3>
          <div class="grid gap-8 md:grid-cols-2 xl:grid-cols-4">
            {extensions.map((extension) => (
              <Extension
                icon={extensionIcons[extension.data.slug] || 'tune'}
                title={extension.data.title}
                desc={extension.data.description || extension.data.oneLiner || ''}
              />
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 sm:py-20">
      <div class="mx-auto max-w-6xl px-6">
        <div class="grid gap-10 md:grid-cols-2">
          {flexibleServices.map((service) => {
            const isEngineering = service.data.slug === 'hourly-engineering';
            const icon = isEngineering ? '‚è±Ô∏è' : 'üéß';
            const cardClass = isEngineering ? '' : 'support';
            const iconClass = isEngineering ? 'engineering' : 'support';
            const priceUnit = isEngineering ? '/hour' : '/month';
            const priceLabel = isEngineering ? 'Remote Rate' : 'Subscription';

            return (
              <div class={`hourly-card ${cardClass} rounded-2xl border border-white/10 bg-surface-lighter/60 p-10 shadow-lg backdrop-blur transition hover:border-primary/40`}>
                <div class="mb-6 flex items-center gap-4">
                  <div class={`hourly-icon ${iconClass} flex h-12 w-12 items-center justify-center rounded-xl text-2xl ${isEngineering ? 'bg-blue-500/10 text-blue-300' : 'bg-cyan-glow/10 text-cyan-glow'}`}>
                    {icon}
                  </div>
                  <h3 class="text-xl font-semibold text-white">{service.data.title}</h3>
                </div>
                <p class="mb-6 text-base text-slate-300">{service.data.description || service.data.oneLiner}</p>
                <div class="flex items-center justify-between border-t border-white/10 pt-6">
                  <span class="text-sm font-medium text-slate-300">{priceLabel}</span>
                  <span class="text-2xl font-bold text-white">{formatPrice(service.data.startingPrice)} <span class="text-base font-normal text-slate-400">{priceUnit}</span></span>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
