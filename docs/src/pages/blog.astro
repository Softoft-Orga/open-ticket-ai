---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogOverview from '../components/vue/core/BlogOverview.vue';
import { ArrowRightIcon, CalendarIcon } from '@heroicons/vue/24/outline';

const pageTitle = "Open Ticket AI Blog";
const pageDescription = "Latest updates, insights, and news about Open Ticket AI and autonomous support automation.";

// Fetch blog posts from the content collection
const allBlogPosts = await Astro.locals.content.getLocalizedCollection('blog');
const publishedPosts = allBlogPosts.filter(({ data }) => !data.draft);

// Sort posts by date (newest first)
const sortedBlogPosts = publishedPosts.sort((a, b) => {
  return b.data.date.getTime() - a.data.date.getTime();
});

// Get the featured post (most recent)
const featuredPost = sortedBlogPosts[0];

// Get remaining posts for the grid (all posts except featured)
const gridPosts = sortedBlogPosts.slice(1);

// Helper function to format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
};

// Helper function to get blog post URL (strip locale prefix and extension from id)
const getBlogUrl = (id: string) => {
  return `/blog/${id.replace(/^[a-z]{2}\//, '').replace(/\.(md|mdx)$/, '')}/`;
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-background-dark">
    <!-- Featured Header -->
    {featuredPost && (
      <section class="relative w-full border-b border-surface-lighter bg-surface-dark py-20 overflow-hidden">
        <div class="absolute right-0 top-0 h-full w-1/2 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-primary/20 via-background-dark to-transparent opacity-50 blur-3xl"></div>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="grid gap-16 lg:grid-cols-2 lg:items-center">
            <div class="flex flex-col gap-8">
              <div class="inline-flex w-fit items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-4 py-1.5 text-xs font-semibold uppercase tracking-wider text-primary-light">
                <span class="size-2 rounded-full bg-primary animate-pulse"></span>
                {featuredPost.data.category || 'Featured Post'}
              </div>
              <h1 class="font-display text-5xl font-bold leading-tight tracking-tight text-white lg:text-7xl">
                {featuredPost.data.title}
              </h1>
              <p class="text-xl text-text-dim max-w-xl leading-relaxed">
                {featuredPost.data.description}
              </p>
              <div class="flex flex-wrap gap-4 pt-4">
                <a href={getBlogUrl(featuredPost.id)} class="group flex h-14 items-center justify-center gap-3 rounded-lg bg-white px-8 text-lg font-bold text-background-dark transition-transform hover:-translate-y-1">
                  Read Article
                  <ArrowRightIcon class="w-6 h-6 transition-transform group-hover:translate-x-1" aria-hidden="true" />
                </a>
              </div>
            </div>
            <div class="relative aspect-square w-full overflow-hidden rounded-2xl border border-surface-lighter bg-surface-lighter shadow-2xl">
              <img
                src={featuredPost.data.image || "https://picsum.photos/800/800?grayscale"}
                alt={featuredPost.data.title}
                class="w-full h-full object-cover opacity-60 transition-transform duration-700 hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-background-dark/90 via-transparent to-transparent"></div>
              <div class="absolute bottom-8 left-8 right-8">
                <div class="flex items-center justify-between text-sm text-text-2">
                  <span class="flex items-center gap-2">
                    <CalendarIcon class="w-5 h-5" aria-hidden="true" /> {formatDate(featuredPost.data.date)}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Blog Overview Component -->
    <BlogOverview posts={gridPosts} client:load />
  </div>
</BaseLayout>
