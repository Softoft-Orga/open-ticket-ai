---
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/vue/core/basic/Badge.vue';
import Button from '../components/vue/core/basic/Button.vue';
import Card from '../components/vue/core/basic/Card.vue';
import {
  CubeTransparentIcon,
  ArrowRightIcon,
  RocketLaunchIcon,
  ServerIcon,
  ShieldCheckIcon,
  CpuChipIcon,
  Squares2X2Icon
} from '@heroicons/vue/24/outline';

const title = "Products - Open Ticket AI";
---

<BaseLayout title={title} description="Open Ticket AI Product Suite - Automated Ticket Classification">
  <div slot="head" />

  <div class="min-h-screen bg-background-dark">
    <!-- Hero Section - Live Classification Engine -->
    <section class="relative w-full px-4 md:px-10 lg:px-20 xl:px-40 py-20 overflow-hidden">
      <div class="absolute -top-32 -right-32 h-96 w-96 rounded-full bg-primary/10 blur-[120px]"></div>
      <div class="w-full max-w-7xl mx-auto">
        <div class="mb-8">
          <Badge tone="primary" client:load>● LIVE CLASSIFICATION ENGINE v2.0</Badge>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="flex flex-col gap-8">
            <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-black text-white leading-tight">
              Automated,<br/>
              Consistent Ticket<br/>
              Classification<br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-400">
                In Real Time.
              </span>
            </h1>

            <p class="text-text-dim text-xl leading-relaxed max-w-xl">
              Analyze incoming tickets and assign structured, hierarchical tags instantly. No rules to maintain. Fully automated.
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <Button variant="surface" size="lg" client:load>
                Start Free Trial
              </Button>
              <Button variant="outline" size="lg" client:load>
                View Demo
              </Button>
            </div>
          </div>

          <!-- Right Side - Terminal Demo -->
          <div class="relative">
            <div class="rounded-2xl bg-[#0c0d15] border border-surface-lighter overflow-hidden shadow-2xl">
              <div class="bg-surface-dark/80 px-4 py-3 flex items-center gap-2 border-b border-surface-lighter">
                <div class="flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-danger"></div>
                  <div class="w-3 h-3 rounded-full bg-warning"></div>
                  <div class="w-3 h-3 rounded-full bg-success"></div>
                </div>
                <span class="text-text-dim text-sm ml-4 font-mono">processor_v2.exe</span>
              </div>

              <div class="p-6 space-y-6 font-mono text-sm">
                <div class="space-y-3">
                  <div class="text-muted">RAW INPUT</div>
                  <div class="bg-surface-dark/50 rounded-lg p-4 border border-border-dark">
                    <p class="text-text-1 mb-2"><span class="text-cyan-glow">Subject:</span> Login failed again?</p>
                    <p class="text-text-1"><span class="text-cyan-glow">Body:</span></p>
                    <p class="text-text-dim mt-1 text-xs leading-relaxed">
                      Hi support, I'm trying to access<br/>
                      the dashboard but getting error<br/>
                      503. This is blocking the payroll<br/>
                      run. Please fix
                    </p>
                  </div>
                </div>

                <div class="space-y-3">
                  <div class="text-primary font-bold">AI STRUCTURED OUTPUT</div>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2">
                      <span class="text-muted">INTENT:</span>
                      <span class="px-3 py-1 rounded-md bg-primary/20 text-primary-light border border-primary/30 text-xs">
                        access_issue
                      </span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="text-muted">SYSTEM:</span>
                      <span class="px-3 py-1 rounded-md bg-secondary/20 text-cyan-glow border border-secondary/30 text-xs">
                        dashboard_main
                      </span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="text-muted">URGENCY:</span>
                      <span class="px-3 py-1 rounded-md bg-danger/20 text-danger border border-danger/30 text-xs">
                        critical
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Capabilities -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24 bg-surface-dark/30">
      <div class="w-full max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Core Capabilities</h2>
          <p class="text-text-dim text-lg max-w-2xl mx-auto">
            Built for enterprise scale and precision.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Fully Automated Classification -->
          <Card variant="outline" hoverable={true} radius="2xl" client:load>
            <div class="flex flex-col gap-4">
              <div class="flex items-center gap-3">
                <CpuChipIcon class="w-10 h-10 text-primary group-hover:scale-110 transition-transform" />
              </div>
              <h3 class="text-2xl font-bold text-white">Fully Automated Classification</h3>
              <p class="text-text-dim text-base leading-relaxed">
                Assigns tags for Intent, Urgency, Impact, User Role, and Sentiment. Works seamlessly on new tickets and historical backlogs without human intervention.
              </p>
            </div>
          </Card>

          <!-- Hierarchical, Not Flat -->
          <Card variant="outline" hoverable={true} radius="2xl" client:load>
            <div class="flex flex-col gap-4">
              <div class="flex items-center gap-3">
                <Squares2X2Icon class="w-10 h-10 text-primary group-hover:scale-110 transition-transform" />
              </div>
              <h3 class="text-2xl font-bold text-white">Hierarchical, Not Flat</h3>
              <p class="text-text-dim text-base leading-relaxed">
                A real taxonomy tree. Parent nodes for high-level aggregation, leaf tags for operational precision. Enables deep, multi-level analytics.
              </p>
            </div>
          </Card>

          <!-- 10 Quadrillion Combinations -->
          <Card variant="outline" hoverable={true} radius="2xl" client:load>
            <div class="flex flex-col gap-4">
              <div class="flex items-center gap-3">
                <CubeTransparentIcon class="w-10 h-10 text-primary group-hover:scale-110 transition-transform" />
              </div>
              <h3 class="text-2xl font-bold text-white">10 Quadrillion Combinations</h3>
              <p class="text-text-dim text-base leading-relaxed">
                Map our fixed high-quality taxonomy to your custom fields. Over 10 quadrillion possible combinations to fit any specific workflow or industry.
              </p>
            </div>
          </Card>
        </div>
      </div>
    </section>


    <!-- Flexible Editions -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24 bg-surface-dark/30">
      <div class="w-full max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Flexible Editions</h2>
          <p class="text-text-dim text-lg max-w-2xl mx-auto">
            Choose the model complexity that fits your operational needs.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Lite Free -->
          <Card variant="outline" radius="2xl" hoverable={true} size="lg" client:load>
            <div class="flex flex-col h-full">
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-white mb-2">Lite Free</h3>
                <p class="text-muted text-sm mb-6">Evaluation & Testing</p>

                <div class="mb-8">
                  <div class="text-5xl font-bold text-white mb-2">
                    0 €
                    <span class="text-muted text-lg font-normal">/one-time</span>
                  </div>
                </div>

                <ul class="space-y-3 mb-8">
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">Model: 0.5B Parameters</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">150+ Tags</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">Accuracy: ~0.82</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">ROI: from 15 tickets/day</span>
                  </li>
                </ul>

                <p class="text-muted text-sm mb-6">Available 18.01</p>
              </div>

              <Button variant="outline" size="md" class="w-full" href="/products/tagging-lite-free/" client:load>
                Explore Lite Free
              </Button>
            </div>
          </Card>

          <!-- Lite Pro - BEST VALUE -->
          <div class="relative">
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-10">
              <Badge tone="primary" client:load>BEST VALUE</Badge>
            </div>

            <Card variant="outline" tone="primary" radius="2xl" hoverable={true} size="lg" elevation="lg" client:load class="transform scale-105">
              <div class="flex flex-col h-full">
                <div class="flex-1">
                  <h3 class="text-2xl font-bold text-white mb-2">Lite Pro</h3>
                  <p class="text-primary-light text-sm mb-6">Production Ready</p>

                  <div class="mb-8">
                    <div class="text-5xl font-bold text-white mb-2">
                      2,500 €
                      <span class="text-text-dim text-lg font-normal">/one-time</span>
                    </div>
                  </div>

                  <ul class="space-y-3 mb-8">
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-white font-medium">Model: 4B Parameters</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-white font-medium">150+ Tags</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-white font-medium">Accuracy: ~0.90</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-white font-medium">Focus: Routing & Reporting</span>
                    </li>
                  </ul>

                  <p class="text-primary-light text-sm mb-6">Available 18.01</p>
                </div>

                <Button variant="surface" size="md" class="w-full" href="/products/tagging-lite-pro/" client:load>
                  Explore Lite Pro
                </Button>
              </div>
            </Card>
          </div>

          <!-- Full Pro -->
          <Card variant="outline" radius="2xl" hoverable={true} size="lg" client:load>
            <div class="flex flex-col h-full">
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-white mb-2">Full Pro</h3>
                <p class="text-muted text-sm mb-6">Advanced Enterprise</p>

                <div class="mb-8">
                  <div class="text-5xl font-bold text-white mb-2">
                    6,000 €
                    <span class="text-muted text-lg font-normal">/one-time</span>
                  </div>
                </div>

                <ul class="space-y-3 mb-8">
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">Model: 8B Parameters</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">250+ Tags</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">Accuracy: ~0.92</span>
                  </li>
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-text-1">Focus: Maximum Detail</span>
                  </li>
                </ul>

                <p class="text-muted text-sm mb-6">IN DEVELOPMENT</p>
              </div>

              <Button variant="outline" size="md" class="w-full" href="/products/tagging-full-pro/" client:load>
                Explore Full Pro
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- Deployment & Hardware Flexibility -->
    <section class="w-full px-4 md:px-10 lg:px-20 xl:px-40 py-24">
      <div class="w-full max-w-7xl mx-auto">
        <div class="mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Deployment & Hardware Flexibility</h2>
          <p class="text-text-dim text-lg max-w-3xl">
            Secure by design. Optimized for your infrastructure.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          <Card variant="outline" radius="xl" client:load>
            <div class="flex items-start gap-3">
              <ServerIcon class="w-6 h-6 text-primary flex-shrink-0 mt-1" />
              <div>
                <h4 class="text-white font-bold mb-1">ON-PREMISE OR PRIVATE CLOUD</h4>
              </div>
            </div>
          </Card>

          <Card variant="outline" radius="xl" client:load>
            <div class="flex items-start gap-3">
              <ShieldCheckIcon class="w-6 h-6 text-primary flex-shrink-0 mt-1" />
              <div>
                <h4 class="text-white font-bold mb-1">NO DATA LEAVES INFRASTRUCTURE</h4>
              </div>
            </div>
          </Card>

          <Card variant="outline" radius="xl" client:load>
            <div class="flex items-start gap-3">
              <CubeTransparentIcon class="w-6 h-6 text-cyan-400 flex-shrink-0 mt-1" />
              <div>
                <h4 class="text-white font-bold mb-1">INT8, BF16, FP16 QUANTIZATIONS</h4>
              </div>
            </div>
          </Card>

          <Card variant="outline" radius="xl" client:load>
            <div class="flex items-start gap-3">
              <CpuChipIcon class="w-6 h-6 text-cyan-400 flex-shrink-0 mt-1" />
              <div>
                <h4 class="text-white font-bold mb-1">OPTIMIZED FOR CPU & GPU</h4>
              </div>
            </div>
          </Card>
        </div>

        <!-- Large CTA -->
        <div class="relative rounded-3xl bg-gradient-to-br from-primary/10 via-surface-dark to-cyan-500/5 border border-primary/30 p-16 text-center overflow-hidden">
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-primary/10 rounded-full blur-[120px]"></div>

          <div class="relative z-10">
            <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary to-cyan-500 flex items-center justify-center">
              <RocketLaunchIcon class="w-10 h-10 text-white" />
            </div>

            <h2 class="text-4xl md:text-6xl font-bold text-white mb-6">
              Turn Raw Tickets into<br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-400">
                Operational Intelligence.
              </span>
            </h2>

            <p class="text-text-dim text-xl mb-10 max-w-3xl mx-auto">
              Join forward-thinking support teams automating their workflow today.
            </p>

            <div class="flex flex-wrap gap-4 justify-center">
              <Button variant="surface" size="lg" client:load>
                GET LITE FREE VERSION
              </Button>
              <Button variant="outline" size="lg" client:load>
                View Architecture
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

