---
import { getRelativeLocaleUrl } from 'astro:i18n';
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/vue/core/basic/Badge.vue';
import Button from '../components/vue/core/basic/Button.vue';
import Card from '../components/vue/core/basic/Card.vue';
import ContactSalesButton from '../components/vue/domain/ContactSalesButton.vue';
import {
  CubeTransparentIcon,
  ArrowRightIcon,
  RocketLaunchIcon,
  ServerIcon,
  ShieldCheckIcon,
  CpuChipIcon,
  Squares2X2Icon,
} from '@heroicons/vue/24/outline';

const title = 'Products - Open Ticket AI';
const currentLocale = Astro.currentLocale || 'en';
---

<BaseLayout
  title={title}
  description="Open Ticket AI Product Suite - Automated Ticket Classification"
>
  <div slot="head"></div>

  <div class="min-h-screen bg-background-dark">
    <!-- Hero Section - Live Classification Engine -->
    <section class="relative w-full overflow-hidden px-4 py-20 md:px-10 lg:px-20 xl:px-40">
      <div class="absolute -right-32 -top-32 h-96 w-96 rounded-full bg-primary/10 blur-[120px]">
      </div>
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-8">
          <Badge tone="primary" client:load>● LIVE CLASSIFICATION ENGINE v2.0</Badge>
        </div>

        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
          <!-- Left Content -->
          <div class="flex flex-col gap-8">
            <h1
              class="font-display text-5xl font-black leading-tight text-white md:text-6xl lg:text-7xl"
            >
              Automated,<br />
              Consistent Ticket<br />
              Classification<br />
              <span class="bg-gradient-to-r from-primary to-cyan-400 bg-clip-text text-transparent">
                In Real Time.
              </span>
            </h1>

            <p class="max-w-xl text-xl leading-relaxed text-text-dim">
              Analyze incoming tickets and assign structured, hierarchical tags instantly. No rules
              to maintain. Fully automated.
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <ContactSalesButton formTitle="Contact Sales" client:load>
                CONTACT SALES
              </ContactSalesButton>
              <Button
                href={getRelativeLocaleUrl(currentLocale, 'products/roi-calculator')}
                variant="outline"
                size="lg"
                client:load
              >
                View ROI Calculator
              </Button>
            </div>
          </div>

          <!-- Right Side - Terminal Demo -->
          <div class="relative">
            <div
              class="overflow-hidden rounded-2xl border border-surface-lighter bg-[#0c0d15] shadow-2xl"
            >
              <div
                class="flex items-center gap-2 border-b border-surface-lighter bg-surface-dark/80 px-4 py-3"
              >
                <div class="flex gap-2">
                  <div class="h-3 w-3 rounded-full bg-danger"></div>
                  <div class="h-3 w-3 rounded-full bg-warning"></div>
                  <div class="h-3 w-3 rounded-full bg-success"></div>
                </div>
                <span class="ml-4 font-mono text-sm text-text-dim">processor_v2.exe</span>
              </div>

              <div class="space-y-6 p-6 font-mono text-sm">
                <div class="space-y-3">
                  <div class="text-muted">RAW INPUT</div>
                  <div class="rounded-lg border border-border-dark bg-surface-dark/50 p-4">
                    <p class="mb-2 text-text-1">
                      <span class="text-cyan-glow">Subject:</span> Login failed again?
                    </p>
                    <p class="text-text-1"><span class="text-cyan-glow">Body:</span></p>
                    <p class="mt-1 text-xs leading-relaxed text-text-dim">
                      Hi support, I'm trying to access<br />
                      the dashboard but getting error<br />
                      503. This is blocking the payroll<br />
                      run. Please fix
                    </p>
                  </div>
                </div>

                <div class="space-y-3">
                  <div class="font-bold text-primary">AI STRUCTURED OUTPUT</div>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2">
                      <span class="text-muted">INTENT:</span>
                      <span
                        class="rounded-md border border-primary/30 bg-primary/20 px-3 py-1 text-xs text-primary-light"
                      >
                        access_issue
                      </span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="text-muted">SYSTEM:</span>
                      <span
                        class="rounded-md border border-secondary/30 bg-secondary/20 px-3 py-1 text-xs text-cyan-glow"
                      >
                        dashboard_main
                      </span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="text-muted">URGENCY:</span>
                      <span
                        class="rounded-md border border-danger/30 bg-danger/20 px-3 py-1 text-xs text-danger"
                      >
                        critical
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
