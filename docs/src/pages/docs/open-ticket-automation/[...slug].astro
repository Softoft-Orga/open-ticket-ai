---
import { getCollection } from 'astro:content';
import DocsLayout from '../../../layouts/DocsLayout.astro';

export async function getStaticPaths() {
  const docsEntries = await getCollection('docs');
  // Filter to only open-ticket-automation docs
  const otaDocs = docsEntries.filter(entry => 
    entry.id.startsWith('open-ticket-automation/')
  );
  
  return otaDocs.map(entry => {
    // Remove 'open-ticket-automation/' prefix and file extension from slug
    const slug = entry.id
      .replace(/^open-ticket-automation\//, '')
      .replace(/\.(md|mdx)$/, '');
    
    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const title = entry.data.title;
const description = entry.data.description;

// Generate breadcrumbs from the slug
// Entry id format: "open-ticket-automation/guides/quick_start.md"
const fullSlugParts = entry.id.replace(/\.(md|mdx)$/, '').split('/');
const breadcrumbs = [
  { label: 'Documentation', href: '/docs/' },
  { label: 'Open Ticket Automation', href: '/docs/open-ticket-automation/' },
  ...fullSlugParts.slice(1, -1).map((part, index) => ({
    label: part.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' '),
    href: '/docs/open-ticket-automation/' + fullSlugParts.slice(1, index + 2).join('/') + '/',
  })),
  { label: title }
];

// Extract TOC from headings (h2 and h3 only)
const toc = headings
  .filter(h => h.depth === 2 || h.depth === 3)
  .map(h => ({
    label: h.text,
    id: h.slug,
  }));
---

<DocsLayout title={title} description={description} breadcrumbs={breadcrumbs} toc={toc}>
  <h1>{title}</h1>
  {description && <p class="text-xl text-slate-400 leading-relaxed mb-8">{description}</p>}
  <Content />
</DocsLayout>
