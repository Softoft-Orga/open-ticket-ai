---
import { getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';
import { localizeHref, getLocaleFromPath, type Locale } from '../../lib/i18nLinks';

export async function getStaticPaths() {
  const docsEntries = await getCollection('docs');
  return docsEntries.map(entry => ({
    params: { slug: entry.id.replace(/\.(md|mdx)$/, '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const title = entry.data.title;
const description = entry.data.description;

// Get current locale
const currentLocale = getLocaleFromPath(Astro.url.pathname) as Locale;

// Generate breadcrumbs from the slug (now with localized hrefs)
const slugParts = entry.id.replace(/\.(md|mdx)$/, '').split('/');
const breadcrumbs = [
  { label: 'Documentation', href: localizeHref('/docs/', currentLocale) },
  ...slugParts.slice(0, -1).map((part, index) => ({
    label: part.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' '),
    href: localizeHref('/docs/' + slugParts.slice(0, index + 1).join('/') + '/', currentLocale),
  })),
  { label: title }
];

// Extract TOC from headings (h2 and h3 only)
const toc = headings
  .filter(h => h.depth === 2 || h.depth === 3)
  .map(h => ({
    label: h.text,
    id: h.slug,
  }));
---

<DocsLayout title={title} description={description} breadcrumbs={breadcrumbs} toc={toc}>
  <h1>{title}</h1>
  {description && <p class="text-xl text-gray-400 leading-relaxed mb-8">{description}</p>}
  <Content />
</DocsLayout>
