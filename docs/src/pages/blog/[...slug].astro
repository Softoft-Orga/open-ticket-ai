---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.id.replace(/\.(md|mdx)$/, '') },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
};
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <div class="min-h-screen bg-background-dark">
    <article class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-24">
      <!-- Article Header -->
      <header class="mb-12 border-b border-surface-lighter pb-12">
        <div class="mb-6 flex flex-wrap items-center gap-4">
          {post.data.category && (
            <span class="inline-block rounded-full bg-primary/10 px-4 py-1.5 text-sm font-bold uppercase tracking-wider text-primary-light">
              {post.data.category}
            </span>
          )}
          <time datetime={post.data.date.toISOString()} class="flex items-center gap-2 text-sm text-text-dim">
            <span class="material-symbols-outlined text-lg">calendar_today</span>
            {formatDate(post.data.date)}
          </time>
        </div>
        
        <h1 class="font-display text-5xl font-bold leading-tight tracking-tight text-white mb-6">
          {post.data.title}
        </h1>
        
        {post.data.description && (
          <p class="text-xl text-gray-400 leading-relaxed">
            {post.data.description}
          </p>
        )}

        {post.data.tags && post.data.tags.length > 0 && (
          <div class="mt-6 flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="inline-block rounded-lg bg-surface-dark px-3 py-1 text-xs font-medium text-gray-400">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Article Content -->
      <div class="text-gray-300 text-lg leading-relaxed space-y-6 
        [&_h1]:text-white [&_h1]:text-4xl [&_h1]:font-bold [&_h1]:mb-4 [&_h1]:mt-8
        [&_h2]:text-white [&_h2]:text-3xl [&_h2]:font-bold [&_h2]:mb-3 [&_h2]:mt-6
        [&_h3]:text-white [&_h3]:text-2xl [&_h3]:font-bold [&_h3]:mb-3 [&_h3]:mt-6
        [&_h4]:text-white [&_h4]:text-xl [&_h4]:font-bold [&_h4]:mb-2 [&_h4]:mt-4
        [&_h5]:text-white [&_h5]:text-lg [&_h5]:font-bold [&_h5]:mb-2 [&_h5]:mt-4
        [&_h6]:text-white [&_h6]:text-base [&_h6]:font-bold [&_h6]:mb-2 [&_h6]:mt-4
        [&_a]:text-primary-light [&_a]:no-underline hover:[&_a]:text-primary hover:[&_a]:underline
        [&_code]:text-primary-light [&_code]:bg-surface-dark [&_code]:px-1.5 [&_code]:py-0.5 [&_code]:rounded
        [&_pre]:bg-surface-dark [&_pre]:border [&_pre]:border-surface-lighter [&_pre]:p-4 [&_pre]:rounded-lg [&_pre]:overflow-x-auto
        [&_pre_code]:bg-transparent [&_pre_code]:p-0
        [&_ul]:text-gray-300 [&_ul]:list-disc [&_ul]:ml-6 [&_ul]:space-y-2
        [&_ol]:text-gray-300 [&_ol]:list-decimal [&_ol]:ml-6 [&_ol]:space-y-2
        [&_li]:text-gray-300
        [&_strong]:text-white [&_strong]:font-semibold
        [&_p]:mb-4
        [&_blockquote]:border-l-4 [&_blockquote]:border-primary [&_blockquote]:pl-4 [&_blockquote]:italic [&_blockquote]:text-gray-400
        [&_img]:rounded-lg [&_img]:my-6
        [&_table]:w-full [&_table]:border-collapse [&_table]:my-6
        [&_th]:bg-surface-dark [&_th]:text-white [&_th]:font-semibold [&_th]:p-3 [&_th]:border [&_th]:border-surface-lighter
        [&_td]:text-gray-300 [&_td]:p-3 [&_td]:border [&_td]:border-surface-lighter">
        <Content />
      </div>

      <!-- Back to Blog -->
      <footer class="mt-16 pt-12 border-t border-surface-lighter">
        <a 
          href="/blog/" 
          class="inline-flex items-center gap-2 text-primary-light hover:text-primary transition-colors"
        >
          <span class="material-symbols-outlined">arrow_back</span>
          Back to all posts
        </a>
      </footer>
    </article>
  </div>
</BaseLayout>
