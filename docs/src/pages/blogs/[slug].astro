---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <div class="min-h-screen bg-background-dark">
    <article class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
      <header class="mb-12 border-b border-surface-lighter pb-8">
        <div class="mb-6 flex flex-wrap items-center gap-3">
          {post.data.category && (
            <span class="inline-flex items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-primary-light">
              {post.data.category}
            </span>
          )}
          {post.data.tags && post.data.tags.map(tag => (
            <span class="inline-flex items-center rounded-full bg-surface-lighter px-3 py-1 text-xs font-medium text-gray-300">
              {tag}
            </span>
          ))}
        </div>
        
        <h1 class="mb-6 font-display text-4xl font-bold leading-tight tracking-tight text-white lg:text-5xl">
          {post.data.title}
        </h1>
        
        {post.data.description && (
          <p class="mb-6 text-xl text-gray-400 leading-relaxed">
            {post.data.description}
          </p>
        )}
        
        <div class="flex items-center gap-4 text-sm text-gray-400">
          <span class="flex items-center gap-2">
            <span class="material-symbols-outlined text-lg">calendar_today</span>
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </span>
        </div>
      </header>

      <div class="blog-content text-gray-300">
        <Content />
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .blog-content :global(h1) {
    @apply text-3xl font-bold text-white mt-8 mb-4;
  }
  
  .blog-content :global(h2) {
    @apply text-2xl font-bold text-white mt-8 mb-4;
  }
  
  .blog-content :global(h3) {
    @apply text-xl font-bold text-white mt-6 mb-3;
  }
  
  .blog-content :global(p) {
    @apply mb-4 leading-relaxed;
  }
  
  .blog-content :global(ul),
  .blog-content :global(ol) {
    @apply mb-4 ml-6 space-y-2;
  }
  
  .blog-content :global(ul) {
    @apply list-disc;
  }
  
  .blog-content :global(ol) {
    @apply list-decimal;
  }
  
  .blog-content :global(li) {
    @apply leading-relaxed;
  }
  
  .blog-content :global(a) {
    @apply text-primary-light hover:text-primary underline;
  }
  
  .blog-content :global(code) {
    @apply bg-surface-lighter px-1.5 py-0.5 rounded text-sm font-mono text-primary-light;
  }
  
  .blog-content :global(pre) {
    @apply bg-surface-lighter p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .blog-content :global(pre code) {
    @apply bg-transparent p-0;
  }
  
  .blog-content :global(blockquote) {
    @apply border-l-4 border-primary pl-4 italic text-gray-400 my-4;
  }
</style>
