---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/vue/core/basic/Card.vue';
import Button from '../../components/vue/core/basic/Button.vue';

const title = "Thank You!";
const description = "Your custom ROI analysis request has been received.";
---

<BaseLayout title={title} description={description}>
  <div slot="head" />

  <div class="min-h-screen bg-bg-1 flex items-center justify-center py-12 px-4">
    <div class="max-w-2xl w-full">
      <Card client:load tone="primary" class="text-center">
        <div class="mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/20 mb-4">
            <svg class="w-8 h-8 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-text-1 mb-4">
            Request Received!
          </h1>
          <p class="text-lg text-text-2 mb-6">
            Thank you for your interest in a custom ROI analysis.
          </p>
        </div>

        <div class="bg-bg-2/50 rounded-xl p-6 mb-8 text-left">
          <h2 class="text-xl font-semibold text-text-1 mb-3">What happens next?</h2>
          <ul class="space-y-3 text-text-2">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-primary-light mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Our team will review your information within 1-2 business days</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-primary-light mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>We'll prepare a customized ROI analysis based on your ticket volume</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-primary-light mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>A member of our sales team will reach out to discuss your specific needs</span>
            </li>
          </ul>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button client:load href="/products/roi-calculator" tone="primary">
            Back to ROI Calculator
          </Button>
          <Button client:load href="/" variant="subtle" tone="neutral">
            Return to Home
          </Button>
        </div>
      </Card>
    </div>
  </div>
</BaseLayout>
