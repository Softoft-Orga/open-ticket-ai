---
import { getCollection } from 'astro:content';
import ModalTrigger from '../../components/vue/core/basic/ModalTrigger.vue';
import ContactForm from '../../components/ContactForm.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/vue/core/basic/Card.vue';
import Badge from '../../components/vue/core/basic/Badge.vue';
import { Icon } from 'astro-icon/components';

const title = 'Services - Open Ticket AI';
const description = 'Professional services for Open Ticket AI integration and support';

// Get all services from the content collection for current locale
const currentLocale = (Astro.currentLocale || 'en').toLowerCase();
const allServicesEntries = await getCollection('services');
const servicesEntries = allServicesEntries.filter(entry =>
  entry.id.toLowerCase().startsWith(`${currentLocale}/`)
);
// Each entry's data is an array of services, so flatten them
const allServices = servicesEntries.flatMap(entry => entry.data);

// Filter services by group
const syntheticDataServices = allServices
  .filter(s => s.serviceGroup === 'Synthetic Data Creation')
  .sort((a, b) => (a.serviceOrder || 0) - (b.serviceOrder || 0));

const extensions = allServices
  .filter(s => s.serviceGroup === 'Extensions')
  .sort((a, b) => (a.serviceOrder || 0) - (b.serviceOrder || 0));

const automationServices = allServices
  .filter(s => s.serviceGroup === 'Automation')
  .sort((a, b) => (a.serviceOrder || 0) - (b.serviceOrder || 0));

const modelDevelopmentServices = allServices
  .filter(s => s.serviceGroup === 'Model Development')
  .sort((a, b) => (a.serviceOrder || 0) - (b.serviceOrder || 0));

const flexibleServices = allServices
  .filter(s => s.serviceGroup === 'Flexible')
  .sort((a, b) => (a.serviceOrder || 0) - (b.serviceOrder || 0));

// Helper function to format price
function formatPrice(price: number | undefined): string {
  if (!price || price === 0) return 'Auf Anfrage';
  return `${price.toLocaleString('de-DE')} €`;
}

// Helper function to determine if highlighted (middle service)
function isHighlighted(index: number, total: number): boolean {
  return total === 3 && index === 1;
}

// Map icon names to heroicons icon names for astro-icon
const iconNameMap: Record<string, string> = {
  tune: 'heroicons:wrench-screwdriver',
  analytics: 'heroicons:chart-bar',
  integration_instructions: 'heroicons:cog-6-tooth',
  update: 'heroicons:arrow-path',
  psychology: 'heroicons:cpu-chip',
  hub: 'heroicons:cube-transparent',
  verified: 'heroicons:check-badge',
  rocket_launch: 'heroicons:rocket-launch',
};

const extensionIcons: Record<string, string> = {
  'fine-tuned-model': 'tune',
  'evaluation-report': 'analytics',
  'system-tuning': 'integration_instructions',
  'ongoing-updates': 'update',
};

// Typical scope items for model development
const typicalScopeItems = [
  {
    icon: 'psychology',
    title: 'Tag-Definition',
    desc: 'Taxonomie-Design, benutzerdefinierte Tag-Definitionen oder Mapping Ihrer Struktur mit unserer Standard-Ontologie.',
  },
  {
    icon: 'hub',
    title: 'Datensatz-Strategie',
    desc: 'Ausbalancieren von synthetischen vs. echten Daten, Umgang mit mehreren Sprachen und Abdecken von Edge Cases.',
  },
  {
    icon: 'verified',
    title: 'Training & Evaluation',
    desc: 'Vollständige Modell-Trainingszyklen mit strengen Akzeptanztests und Leistungsvalidierung.',
  },
  {
    icon: 'rocket_launch',
    title: 'Packaging & Deployment',
    desc: 'Anleitung für Self-Hosted Inference Setup, Containerisierung und Update-Strategien.',
  },
];
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark pb-32">
    <!-- Hero -->
    <section class="relative pb-20 pt-24 text-center">
      <div class="mx-auto max-w-7xl px-6">
        <div class="mb-8">
          <Badge variant="subtle" tone="success" size="sm" client:load>
            <span class="flex items-center gap-2">
              <span class="flex h-2 w-2 rounded-full bg-green-500"></span>
              Deutsche Ingenieurspräzision
            </span>
          </Badge>
        </div>
        <h1
          class="mx-auto mb-8 max-w-4xl text-6xl font-black leading-[0.9] tracking-tighter text-white sm:text-7xl lg:text-8xl"
        >
          Wir bauen nicht nur KI. <br />
          <span class="bg-gradient-to-r from-primary to-cyan-400 bg-clip-text text-transparent"
            >Wir integrieren sie.</span
          >
        </h1>
        <p class="mx-auto max-w-2xl text-xl font-medium leading-relaxed text-slate-400">
          Transparente, Festpreis-Pakete für Enterprise-gradige Helpdesk-Automatisierung. Von
          Self-Hosted AI-Modellen bis zur vollständigen Workflow-Automatisierung.
        </p>
      </div>
    </section>

    <!-- Ticket Tagging AI Model Section -->
    <section class="mx-auto mb-32 max-w-7xl px-6">
      <div
        class="flex flex-col gap-16 rounded-3xl border border-white/5 bg-[#120818] p-10 lg:flex-row"
      >
        <div class="lg:w-2/3">
          <div class="mb-6 flex items-center gap-3">
            <div class="rounded-lg bg-primary/10 p-2 text-primary">
              <Icon name="heroicons:cube-transparent" class="h-8 w-8" aria-hidden="true" />
            </div>
            <h2 class="text-3xl font-bold text-white">Ticket Tagging AI Model</h2>
          </div>
          <p class="mb-10 max-w-2xl text-lg leading-relaxed text-slate-400">
            Unser Kern-KI-Modell für die automatische Klassifizierung und Tagging von
            Helpdesk-Tickets. Es verarbeitet eingehende Anfragen, um kritische Metadaten zu
            identifizieren, bevor ein Mensch das Ticket überhaupt sieht.
          </p>
          <div class="grid grid-cols-2 gap-6">
            <div class="flex items-center gap-3 text-slate-300">
              <div class="size-2 rounded-full bg-primary"></div>
              <span class="font-bold">Kategorie & Thema</span>
            </div>
            <div class="flex items-center gap-3 text-slate-300">
              <div class="size-2 rounded-full bg-primary"></div>
              <span class="font-bold">Intent-Erkennung</span>
            </div>
            <div class="flex items-center gap-3 text-slate-300">
              <div class="size-2 rounded-full bg-primary"></div>
              <span class="font-bold">Auswirkung, Dringlichkeit & Priorität</span>
            </div>
            <div class="flex items-center gap-3 text-slate-300">
              <div class="size-2 rounded-full bg-primary"></div>
              <span class="font-bold">Routing-Hinweise</span>
            </div>
          </div>
        </div>
        <div class="flex flex-col gap-4 lg:w-1/3">
          <div class="mb-2 text-xs font-bold uppercase tracking-widest text-slate-500">
            Deployment & Integration
          </div>
          <Card variant="outline" size="sm" radius="xl" client:load>
            <div class="flex items-start gap-4">
              <Icon
                name="heroicons:server"
                class="h-6 w-6 flex-shrink-0 text-primary"
                aria-hidden="true"
              />
              <div>
                <h4 class="text-sm font-bold text-white">Self-Hosted</h4>
                <p class="text-[11px] leading-tight text-slate-500">
                  Vollständige On-Premise-Bereitstellung. Keine Daten verlassen Ihre sichere
                  Infrastruktur.
                </p>
              </div>
            </div>
          </Card>
          <Card variant="outline" size="sm" radius="xl" client:load>
            <div class="flex items-start gap-4">
              <Icon
                name="heroicons:arrow-path-rounded-square"
                class="h-6 w-6 flex-shrink-0 text-primary"
                aria-hidden="true"
              />
              <div>
                <h4 class="text-sm font-bold text-white">Auto Write-Back</h4>
                <p class="text-[11px] leading-tight text-slate-500">
                  Tiefe Integration mit Ticketsystemen, um automatisch Tags und Felder
                  zurückzuschreiben.
                </p>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- Synthetic Data Generation -->
    <section class="mx-auto mb-32 max-w-7xl px-6">
      <div class="mb-16 text-center">
        <div class="mb-6">
          <Badge variant="subtle" tone="info" size="sm" client:load>
            <span class="flex items-center gap-2">
              <Icon name="heroicons:circle-stack" class="h-3 w-3" aria-hidden="true" />
              Data Generation
            </span>
          </Badge>
        </div>
        <h2 class="mb-6 text-5xl font-black tracking-tight text-white">
          Synthetic Data Generation
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-slate-400">
          Benutzerdefinierte, realistische, mehrsprachige Support-Ticket-Datensätze für KI-Training,
          Evaluation und Benchmarking. Keine sensiblen Kundendaten offengelegt.
        </p>
      </div>

      <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-3">
        {
          syntheticDataServices.map((service, index) => {
            const highlighted = isHighlighted(index, syntheticDataServices.length);
            return (
              <Card
                variant={highlighted ? 'surface' : 'outline'}
                tone={highlighted ? 'primary' : 'neutral'}
                size="md"
                radius="2xl"
                elevation={highlighted ? 'md' : 'none'}
                client:load
              >
                <div slot="title">
                  <h4 class="font-display text-xl font-bold text-white">{service.title}</h4>
                  {service.oneLiner && (
                    <p class="mt-1 text-xs font-bold uppercase text-primary">{service.oneLiner}</p>
                  )}
                </div>
                <div class="mb-8">
                  <div class="mb-1 text-sm font-bold uppercase tracking-widest text-slate-400">
                    ab
                  </div>
                  <div class="font-display text-3xl font-bold text-white">
                    {formatPrice(service.startingPrice)}
                  </div>
                </div>
                <ul class="mb-10 flex-grow space-y-3">
                  {(service.outcomes || []).map(feature => (
                    <li class="flex items-start gap-2.5 text-sm text-slate-300">
                      <Icon
                        name="heroicons:check"
                        class="mt-0.5 h-5 w-5 flex-shrink-0 text-primary"
                        aria-hidden="true"
                      />
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
                <div slot="actions">
                  <ModalTrigger
                    title="Contact Sales"
                    tone="neutral"
                    size="lg"
                    button-text={index === 1 ? 'Demo anfordern' : 'Vertrieb kontaktieren'}
                    button-variant={highlighted ? 'surface' : 'outline'}
                    button-tone={highlighted ? 'primary' : 'neutral'}
                    button-size="md"
                    button-block
                    client:load
                  >
                    <ContactForm
                      title={service.title}
                      submitButtonText="Absenden"
                      messageLabel="Nachricht"
                      emailLabel="E-Mail"
                      subjectLabel="Betreff"
                      emailPlaceholder="ihre@email.de"
                      messagePlaceholder="Wie können wir Ihnen helfen?"
                    />
                  </ModalTrigger>
                </div>
              </Card>
            );
          })
        }
      </div>

      <!-- Common Extensions -->
      <Card variant="surface" tone="neutral" size="md" radius="2xl" elevation="none" client:load>
        <div slot="header" class="flex items-center gap-3">
          <Icon name="heroicons:archive-box" class="h-6 w-6 text-slate-500" aria-hidden="true" />
          <h3 class="text-sm font-bold uppercase tracking-widest text-slate-400">
            Common Extensions <span class="font-normal text-slate-600">(Add-ons)</span>
          </h3>
        </div>
        <div class="grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-4">
          {
            extensions.map(extension => {
              const iconKey = extensionIcons[extension.slug] || 'tune';
              const iconName = iconNameMap[iconKey] || 'heroicons:wrench-screwdriver';
              return (
                <div class="flex items-start gap-4">
                  <div class="mt-0.5 text-primary">
                    <Icon name={iconName} class="h-6 w-6" aria-hidden="true" />
                  </div>
                  <div>
                    <h5 class="mb-1 text-sm font-bold text-white">{extension.title}</h5>
                    <p class="text-xs leading-relaxed text-slate-500">
                      {extension.description || extension.oneLiner || ''}
                    </p>
                  </div>
                </div>
              );
            })
          }
        </div>
      </Card>
    </section>

    <!-- Automation Services (OTA) -->
    <section class="mx-auto mb-32 max-w-7xl px-6">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-12">
        <div class="lg:col-span-5">
          <div class="mb-6">
            <Badge variant="subtle" tone="primary" size="sm" client:load>
              <span class="flex items-center gap-2">
                <Icon name="heroicons:sparkles" class="h-3 w-3" aria-hidden="true" />
                Automation Engine
              </span>
            </Badge>
          </div>
          <h2 class="mb-6 text-5xl font-black text-white">Automation Services</h2>
          <h3 class="mb-6 text-xl font-bold text-slate-200">Open Ticket Automation (OTA)</h3>
          <p class="mb-8 text-lg leading-relaxed text-slate-400">
            OTA ist unsere Open-Source-Schicht, die KI-Tags in konkrete Aktionen übersetzt. Sie
            überbrückt die Lücke zwischen Intelligenz und Lösung.
          </p>
          <ul class="space-y-4">
            {
              [
                'Routing & Zuweisungen',
                'Priorität & SLA-Updates',
                'Auto-Antworten & Notizen',
                'Aufgabenauslösung',
              ].map(item => (
                <li class="flex items-center gap-3 font-bold text-slate-300">
                  <Icon
                    name="heroicons:arrow-right"
                    class="h-5 w-5 text-primary"
                    aria-hidden="true"
                  />
                  {item}
                </li>
              ))
            }
          </ul>
        </div>
        <div class="lg:col-span-7">
          {
            automationServices.map(service => (
              <Card
                variant="surface"
                tone="primary"
                size="md"
                radius="2xl"
                elevation="none"
                client:load
              >
                <div slot="header" class="flex items-start justify-between">
                  <div>
                    <h4 class="text-xl font-bold text-white">{service.title}</h4>
                    <p class="mt-1 text-xs text-slate-500">{service.oneLiner}</p>
                  </div>
                  <div class="text-right">
                    <div class="text-3xl font-bold text-white">
                      {formatPrice(service.startingPrice)}
                    </div>
                    <div class="text-[10px] uppercase text-slate-500">Einmalig</div>
                  </div>
                </div>

                <div>
                  <div class="mb-4 text-[10px] font-black uppercase text-white">
                    Was enthalten ist
                  </div>
                  <ul class="space-y-3">
                    {(service.outcomes || []).map(item => (
                      <li class="flex items-start gap-2.5 text-xs text-slate-400">
                        <Icon
                          name="heroicons:check"
                          class="mt-0.5 h-4 w-4 flex-shrink-0 text-primary"
                          aria-hidden="true"
                        />
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div slot="actions">
                  <ModalTrigger
                    title="Contact Sales"
                    tone="neutral"
                    size="lg"
                    button-text="Vertrieb kontaktieren"
                    button-variant="surface"
                    button-tone="primary"
                    button-size="md"
                    button-block
                    client:load
                  >
                    <ContactForm
                      title={service.title}
                      submitButtonText="Absenden"
                      messageLabel="Nachricht"
                      emailLabel="E-Mail"
                      subjectLabel="Betreff"
                      emailPlaceholder="ihre@email.de"
                      messagePlaceholder="Wie können wir Ihnen helfen?"
                    />
                  </ModalTrigger>
                </div>
              </Card>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Model Development -->
    <section class="mx-auto mb-32 max-w-7xl px-6">
      <div class="mb-16 text-center">
        <div class="mb-6">
          <Badge variant="subtle" tone="primary" size="sm" client:load>
            <span class="flex items-center gap-2">
              <Icon name="heroicons:cpu-chip" class="h-3 w-3" aria-hidden="true" />
              Intelligence Layer
            </span>
          </Badge>
        </div>
        <h2 class="mb-6 text-5xl font-black text-white">
          Model Development <span class="font-medium text-slate-500">(Custom Tagging Models)</span>
        </h2>
        <p class="text-lg text-slate-400">
          Benutzerdefiniertes Training und Architektur für spezielle Tagging-Anforderungen.
        </p>
      </div>

      <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-3">
        {
          modelDevelopmentServices.map((service, index) => {
            if (index === 1) {
              return (
                <Card
                  variant="surface"
                  tone="primary"
                  size="md"
                  radius="2xl"
                  elevation="md"
                  class="bg-gradient-to-r from-[#1a1a1a] to-[#0a0a0a]"
                  actionsSticky
                  client:load
                >
                  <div slot="header" class="flex items-start justify-between">
                    <div>
                      <h4 class="text-xl font-bold text-white">{service.title}</h4>
                      <p class="mt-1 text-xs text-slate-500">{service.oneLiner}</p>
                    </div>
                    <div class="text-right">
                      <div class="text-3xl font-bold text-white">
                        {formatPrice(service.startingPrice)}
                      </div>
                      <div class="text-[10px] uppercase text-slate-500">Einmalig</div>
                    </div>
                  </div>

                  <div class="space-y-4">
                    <div class="text-[10px] font-black uppercase text-white">Typischer Umfang</div>
                    <ul class="space-y-3">
                      {typicalScopeItems.map(item => (
                        <li class="flex items-start gap-2.5 text-xs text-slate-400">
                          <Icon
                            name="heroicons:check"
                            class="mt-0.5 h-4 w-4 flex-shrink-0 text-primary"
                            aria-hidden="true"
                          />
                          <span>{item.title}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div slot="actions">
                    <ModalTrigger
                      title="Contact Sales"
                      tone="neutral"
                      size="lg"
                      button-text="Demo anfordern"
                      button-variant="surface"
                      button-tone="primary"
                      button-size="md"
                      button-block
                      client:load
                    >
                      <ContactForm
                        title={service.title}
                        submitButtonText="Absenden"
                        messageLabel="Nachricht"
                        emailLabel="E-Mail"
                        subjectLabel="Betreff"
                        emailPlaceholder="ihre@email.de"
                        messagePlaceholder="Wie können wir Ihnen helfen?"
                      />
                    </ModalTrigger>
                  </div>
                </Card>
              );
            }

            return (
              <Card
                variant="surface"
                tone="primary"
                size="md"
                radius="2xl"
                elevation="none"
                actionsSticky
                client:load
              >
                <div slot="header" class="flex items-start justify-between">
                  <div>
                    <h4 class="text-xl font-bold text-white">{service.title}</h4>
                    <p class="mt-1 text-xs text-slate-500">{service.oneLiner}</p>
                  </div>
                  <div class="text-right">
                    <div class="text-3xl font-bold text-white">
                      {formatPrice(service.startingPrice)}
                    </div>
                    <div class="text-[10px] uppercase text-slate-500">Einmalig</div>
                  </div>
                </div>

                <div>
                  <div class="mb-4 text-[10px] font-black uppercase text-white">
                    Was enthalten ist
                  </div>
                  <ul class="space-y-3">
                    {(service.outcomes || []).map(item => (
                      <li class="flex items-start gap-2.5 text-xs text-slate-400">
                        <Icon
                          name="heroicons:check"
                          class="mt-0.5 h-4 w-4 flex-shrink-0 text-primary"
                          aria-hidden="true"
                        />
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div slot="actions">
                  <ModalTrigger
                    title="Contact Sales"
                    tone="neutral"
                    size="lg"
                    button-text="Vertrieb kontaktieren"
                    button-variant="outline"
                    button-tone="neutral"
                    button-size="md"
                    button-block
                    client:load
                  >
                    <ContactForm
                      title={service.title}
                      submitButtonText="Absenden"
                      messageLabel="Nachricht"
                      emailLabel="E-Mail"
                      subjectLabel="Betreff"
                      emailPlaceholder="ihre@email.de"
                      messagePlaceholder="Wie können wir Ihnen helfen?"
                    />
                  </ModalTrigger>
                </div>
              </Card>
            );
          })
        }
      </div>
    </section>

    <!-- Flexible Services -->
    <section class="mx-auto mb-32 max-w-7xl px-6">
      <div class="mb-16 text-center">
        <div class="mb-6">
          <Badge variant="subtle" tone="info" size="sm" client:load>
            <span class="flex items-center gap-2">
              <Icon name="heroicons:sparkles" class="h-3 w-3" aria-hidden="true" />
              Flexible Services
            </span>
          </Badge>
        </div>
        <h2 class="mb-6 text-5xl font-black text-white">Flexible Services</h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-slate-400">
          Maßgeschneiderte Lösungen und Expertenberatung für Ihre einzigartigen
          Automatisierungsbedürfnisse.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          flexibleServices.map(service => (
            <Card
              variant="surface"
              tone="primary"
              size="md"
              radius="2xl"
              elevation="none"
              client:load
            >
              <div slot="header" class="flex items-start justify-between">
                <div>
                  <h4 class="text-xl font-bold text-white">{service.title}</h4>
                  <p class="mt-1 text-xs text-slate-500">{service.oneLiner}</p>
                </div>
                <div class="text-right">
                  <div class="text-3xl font-bold text-white">
                    {formatPrice(service.startingPrice)}
                  </div>
                  <div class="text-[10px] uppercase text-slate-500">Einmalig</div>
                </div>
              </div>

              <div class="space-y-4">
                <div class="text-[10px] font-black uppercase text-white">Typischer Umfang</div>
                <ul class="space-y-3">
                  {typicalScopeItems.map(item => (
                    <li class="flex items-start gap-2.5 text-xs text-slate-400">
                      <Icon
                        name="heroicons:check"
                        class="mt-0.5 h-4 w-4 flex-shrink-0 text-primary"
                        aria-hidden="true"
                      />
                      <span>{item.title}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div slot="footer">
                <Card variant="outline" tone="neutral" size="sm" radius="xl" client:load>
                  <div class="mb-4 text-[10px] font-black uppercase text-white">Mehr benötigt?</div>
                  <p class="mb-4 text-xs text-slate-400">
                    Individuelle Anforderungen oder zusätzliche Funktionen?
                  </p>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-300">Maßgeschneiderte Entwicklung</span>
                    <span class="font-bold text-white">Auf Anfrage</span>
                  </div>
                </Card>
              </div>

              <div slot="actions">
                <ModalTrigger
                  title="Contact Sales"
                  tone="neutral"
                  size="lg"
                  button-text="Vertrieb kontaktieren"
                  button-variant="outline"
                  button-tone="neutral"
                  button-size="md"
                  button-block
                  client:load
                >
                  <ContactForm
                    title={service.title}
                    submitButtonText="Absenden"
                    messageLabel="Nachricht"
                    emailLabel="E-Mail"
                    subjectLabel="Betreff"
                    emailPlaceholder="ihre@email.de"
                    messagePlaceholder="Wie können wir Ihnen helfen?"
                  />
                </ModalTrigger>
              </div>
            </Card>
          ))
        }
      </div>
    </section>
  </div>
</BaseLayout>
