---
import { getRelativeLocaleUrl } from 'astro:i18n';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/vue/core/basic/Card.vue';
import Badge from '../../components/vue/core/basic/Badge.vue';
import Button from '../../components/vue/core/basic/Button.vue';
import { Icon } from 'astro-icon/components';

const pageTitle = 'Open Ticket AI - Automated Ticket Tagging, On-Premise';
const pageDescription =
  'Enterprise-grade ticket automation with AI-powered tagging. Process tickets locally with our on-premise solution—no cloud dependency, maximum data privacy.';

const taggingFeatures = [
  {
    title: 'Echtzeit-Klassifizierung',
    description: 'Sofortige Kategorisierung von Tickets bei Eingang in Ihr Helpdesk',
    icon: 'heroicons:bolt',
  },
  {
    title: 'Hierarchische Taxonomien',
    description: 'Komplexe verschachtelte Tag-Strukturen mit unbegrenzter Tiefe und Anpassung',
    icon: 'heroicons:queue-list',
  },
  {
    title: 'Mehrsprachige Unterstützung',
    description: 'Klassifizieren Sie Tickets gleichzeitig in Englisch, Deutsch, Französisch und weiteren Sprachen',
    icon: 'heroicons:globe-alt',
  },
  {
    title: 'Backlog-Verarbeitung',
    icon: 'heroicons:clock',
  },
  {
    title: 'Individuelles Training',
    description: 'Trainieren Sie mit Ihren spezifischen Ticket-Mustern und Terminologien für überlegene Genauigkeit',
    icon: 'heroicons:cpu-chip',
  },
  {
    title: 'Qualitätsanalysen',
    description: 'Integrierte Konfidenzbewertung und Qualitätsmetriken für kontinuierliche Verbesserung',
    icon: 'heroicons:chart-bar',
  },
];

const privacyFeatures = [
  {
    title: 'Keine Cloud-Abhängigkeit',
    description: 'Die gesamte Ticket-Verarbeitung erfolgt auf Ihrer Infrastruktur – nichts verlässt Ihr Netzwerk',
    highlight: true,
  },
  {
    title: 'DSGVO-konform durch Design',
    description:
      'Kundendaten bleiben innerhalb Ihrer Jurisdiktion und erfüllen strengste Datenschutzvorschriften',
  },
  {
    title: 'Air-Gap kompatibel',
    description: 'Funktioniert in komplett isolierten Umgebungen ohne Internetzugang',
  },
  {
    title: 'Vollständiger Prüfpfad',
    description: 'Umfassende Protokollierung und Zugriffskontrolle für Compliance- und Sicherheitsteams',
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div slot="head"></div>

  <div class="w-full bg-background-dark text-white antialiased">
    <!-- Hero Section -->
    <section
      class="relative flex w-full justify-center bg-glow-radial px-4 py-20 md:px-10 md:py-28 lg:px-20 xl:px-40"
    >
      <div class="flex w-full max-w-7xl flex-col items-center gap-12 text-center">
        <div
          class="flex w-fit items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-4 py-2 text-xs font-bold uppercase tracking-wider text-primary"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="absolute inline-flex h-full w-full animate-ping rounded-full bg-primary opacity-75"
            ></span>
            <span class="relative inline-flex h-2 w-2 rounded-full bg-primary"></span>
          </span>
          On-Premise AI • Keine Cloud-Abhängigkeit
        </div>

        <h1
          class="font-display max-w-5xl text-5xl font-bold leading-tight tracking-tight text-white md:text-6xl lg:text-7xl"
        >
          Enterprise Ticket-Automatisierung.<br />
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
            >100% Auf Ihrer Infrastruktur.</span
          >
        </h1>

        <p class="max-w-4xl text-xl leading-relaxed text-text-dim md:text-2xl">
          Wir bieten KI-gestützte Ticket-Tagging und Workflow-Automatisierung, die vollständig
          on-premise läuft. Ihre Ticket-Daten verlassen nie Ihr Netzwerk – Sie behalten die Kontrolle und
          bleiben konform.
        </p>

        <div class="flex flex-wrap justify-center gap-4 pt-4">
          <Button
            variant="surface"
            tone="primary"
            size="lg"
            href={getRelativeLocaleUrl(Astro.currentLocale, 'docs')}
            client:load
          >
            Dokumentation erkunden
          </Button>
          <Button
            variant="outline"
            tone="primary"
            size="lg"
            href={getRelativeLocaleUrl(Astro.currentLocale, 'services')}
            client:load
          >
            Services ansehen
          </Button>
        </div>
      </div>
    </section>

    <!-- Company Overview Section -->
    <section class="w-full bg-background-dark px-4 py-20 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16 text-center">
          <Badge variant="subtle" tone="primary" size="md" client:load> Wer wir sind </Badge>
          <h2 class="font-display mb-6 mt-6 text-4xl font-bold text-white md:text-5xl">
            Gebaut für Teams, die Datenschutz schätzen
          </h2>
          <p class="mx-auto max-w-3xl text-lg leading-relaxed text-text-dim md:text-xl">
            Wir sind spezialisiert auf On-Premise AI-Lösungen für Helpdesk-Automatisierung. Unsere Mission ist es,
            Enterprise-grade Ticket-Intelligenz ohne Kompromisse bei der Datensouveränität zu bringen.
          </p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          <Card variant="surface" size="md" hoverable client:load>
            <div slot="default" class="py-4 text-center">
              <div
                class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-primary/20"
              >
                <Icon name="heroicons:shield-check" class="h-8 w-8 text-primary" />
              </div>
              <h3 class="mb-3 text-xl font-bold text-white">Datenschutz zuerst</h3>
              <p class="leading-relaxed text-text-dim">
                Keine externen Cloud-Dienste. Die gesamte Verarbeitung erfolgt auf Ihren Servern und gewährleistet
                vollständige Datenschutz- und Compliance-Anforderungen.
              </p>
            </div>
          </Card>

          <Card variant="surface" size="md" hoverable client:load>
            <div slot="default" class="py-4 text-center">
              <div
                class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-secondary/20"
              >
                <Icon name="heroicons:bolt" class="h-8 w-8 text-secondary" />
              </div>
              <h3 class="mb-3 text-xl font-bold text-white">Schnelle Bereitstellung</h3>
              <p class="leading-relaxed text-text-dim">
                Gehen Sie in Tagen, nicht Monaten, von der Installation in die Produktion. Unser optimierter Bereitstellungsprozess
                bringt Sie schnell zum Tagging von Tickets.
              </p>
            </div>
          </Card>

          <Card variant="surface" size="md" hoverable client:load>
            <div slot="default" class="py-4 text-center">
              <div
                class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-success/20"
              >
                <Icon name="heroicons:briefcase" class="h-8 w-8 text-success" />
              </div>
              <h3 class="mb-3 text-xl font-bold text-white">Enterprise-ready</h3>
              <p class="leading-relaxed text-text-dim">
                Gebaut für groß angelegte Operationen mit Unterstützung für mehrsprachige Tickets, komplexe
                Workflows und Hochvolumen-Verarbeitung.
              </p>
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- Tagging AI Feature Showcase -->
    <section class="w-full bg-surface-dark/30 px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16 text-center">
          <Badge variant="surface" tone="primary" size="md" client:load> Kerntechnologie </Badge>
          <h2 class="font-display mb-6 mt-6 text-4xl font-bold text-white md:text-5xl">
            Tagging AI: Intelligente Klassifizierung im großen Maßstab
          </h2>
          <p class="mx-auto max-w-3xl text-lg leading-relaxed text-text-dim md:text-xl">
            Unsere führende KI-Engine kategorisiert automatisch Support-Tickets mit Enterprise-grade
            Genauigkeit. Gebaut für komplexe Taxonomien und mehrsprachige Umgebungen.
          </p>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {
            taggingFeatures.map(feature => (
              <Card variant="surface" size="md" hoverable client:load>
                <div slot="default" class="flex flex-col gap-4">
                  <div class="flex items-start gap-4">
                    <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-primary/20">
                      <Icon name={feature.icon} class="h-6 w-6 text-primary" />
                    </div>
                    <div class="flex-1">
                      <h3 class="mb-2 text-lg font-bold text-white">{feature.title}</h3>
                      <p class="text-sm leading-relaxed text-text-dim">{feature.description}</p>
                    </div>
                  </div>
                </div>
              </Card>
            ))
          }
        </div>

        <div class="mt-12 text-center">
          <Button
            variant="outline"
            tone="primary"
            size="lg"
            href={getRelativeLocaleUrl(Astro.currentLocale, 'docs/ticket-tagging')}
            client:load
          >
            Mehr über Tagging AI erfahren
          </Button>
        </div>
      </div>
    </section>

    <!-- Data Privacy & On-Premise Advantage -->
    <section class="w-full bg-background-dark px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <Card variant="surface" size="lg" client:load class="relative overflow-hidden">
          <div slot="default" class="relative z-10">
            <div
              class="absolute -right-32 -top-32 h-96 w-96 rounded-full bg-primary/10 blur-[120px]"
            >
            </div>
            <div
              class="absolute -bottom-32 -left-32 h-96 w-96 rounded-full bg-secondary/10 blur-[120px]"
            >
            </div>

            <div class="relative flex flex-col items-center gap-12 lg:flex-row">
              <!-- Content Side -->
              <div class="flex w-full flex-col gap-6 lg:w-1/2">
                <Badge variant="surface" tone="success" size="md" client:load>
                  Unser Wettbewerbsvorteil
                </Badge>

                <h2 class="font-display text-4xl font-bold leading-tight text-white md:text-5xl">
                  On-Premise:<br />Maximaler Datenschutz, null Kompromisse
                </h2>

                <p class="text-lg leading-relaxed text-text-dim">
                  Im Gegensatz zu Cloud-basierten Wettbewerbern bringen wir die KI direkt zu Ihrer Infrastruktur. Das
                  ist nicht nur eine Bereitstellungsoption – es ist unsere Kernphilosophie und was uns auszeichnet.
                </p>

                <div class="mt-4 flex flex-col gap-4">
                  {
                    privacyFeatures.map(feature => (
                      <div
                        class={`rounded-xl p-4 ${feature.highlight ? 'border-2 border-success/30 bg-success/10' : 'bg-surface-lighter/50'}`}
                      >
                        <div class="flex items-start gap-3">
                          <div class="mt-1 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-success/20">
                            <svg
                              class="h-4 w-4 text-success"
                              fill="currentColor"
                              viewBox="0 0 20 20"
                            >
                              <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"
                              />
                            </svg>
                          </div>
                          <div class="flex-1">
                            <h3 class="mb-1 font-bold text-white">{feature.title}</h3>
                            <p class="text-sm leading-relaxed text-text-dim">
                              {feature.description}
                            </p>
                          </div>
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>

              <!-- Visual Side -->
              <div class="w-full lg:w-1/2">
                <div class="group relative">
                  <div
                    class="absolute -inset-2 rounded-2xl bg-gradient-to-r from-success to-primary opacity-20 blur-lg transition duration-1000 group-hover:opacity-30"
                  >
                  </div>
                  <div
                    class="relative rounded-2xl border border-border-dark bg-gradient-to-br from-surface-lighter to-surface-dark p-8"
                  >
                    <div class="flex flex-col gap-6">
                      <div
                        class="flex items-center gap-4 rounded-xl border border-success/20 bg-success/10 p-4"
                      >
                        <svg
                          class="h-12 w-12 flex-shrink-0 text-success"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                          ></path>
                        </svg>
                        <div>
                          <div class="font-bold text-white">Ihre Infrastruktur</div>
                          <div class="text-sm text-text-dim">Vollständige Kontrolle & Datenschutz</div>
                        </div>
                      </div>

                      <div class="flex justify-center">
                        <svg
                          class="h-8 w-8 text-success"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                      </div>

                      <div
                        class="flex items-center gap-4 rounded-xl border border-primary/20 bg-primary/10 p-4"
                      >
                        <svg
                          class="h-12 w-12 flex-shrink-0 text-primary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                          ></path>
                        </svg>
                        <div>
                          <div class="font-bold text-white">Tagging AI Verarbeitung</div>
                          <div class="text-sm text-text-dim">Alles lokal, keine Cloud-Aufrufe</div>
                        </div>
                      </div>

                      <div class="flex justify-center">
                        <svg
                          class="h-8 w-8 text-success"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                      </div>

                      <div
                        class="flex items-center gap-4 rounded-xl border border-secondary/20 bg-secondary/10 p-4"
                      >
                        <svg
                          class="h-12 w-12 flex-shrink-0 text-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                          ></path>
                        </svg>
                        <div>
                          <div class="font-bold text-white">Getaggte Tickets</div>
                          <div class="text-sm text-text-dim">Bereit für Automatisierung</div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </section>

    <!-- Services Preview Section -->
    <section class="w-full bg-surface-dark/30 px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-16 text-center">
          <Badge variant="subtle" tone="neutral" size="md" client:load>
            Professionelle Services
          </Badge>
          <h2 class="font-display mb-6 mt-6 text-4xl font-bold text-white md:text-5xl">
            Wir bieten auch Implementierungsservices an
          </h2>
          <p class="mx-auto max-w-3xl text-lg leading-relaxed text-text-dim md:text-xl">
            Vom ersten Setup bis zu individuellen Integrationen hilft Ihnen unser Team, Open
            Ticket AI für Ihre spezifischen Anforderungen bereitzustellen und zu optimieren.
          </p>
        </div>

        <div class="mb-12 grid grid-cols-1 gap-8 md:grid-cols-3">
          <Card variant="outline" size="md" hoverable client:load>
            <div slot="default" class="py-6 text-center">
              <div
                class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-primary/20"
              >
                <svg
                  class="h-7 w-7 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-lg font-bold text-white">Integrationspakete</h3>
              <p class="text-sm text-text-dim">
                Verbinden Sie sich mit Ihrer bestehenden Helpdesk- und IT-Infrastruktur
              </p>
            </div>
          </Card>

          <Card variant="outline" size="md" hoverable client:load>
            <div slot="default" class="py-6 text-center">
              <div
                class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-secondary/20"
              >
                <svg
                  class="h-7 w-7 text-secondary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
                  ></path>
                </svg>
              </div>
              <h3 class="mb-2 text-lg font-bold text-white">Individuelle Konfiguration</h3>
              <p class="text-sm text-text-dim">
                Maßgeschneiderte Taxonomie-Einrichtung und Workflow-Automatisierungsdesign
              </p>
            </div>
          </Card>

          <Card variant="outline" size="md" hoverable client:load>
            <div slot="default" class="py-6 text-center">
              <div
                class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-success/20"
              >
                <svg
                  class="h-7 w-7 text-success"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                  ></path>
                </svg>
              </div>
              <h3 class="mb-2 text-lg font-bold text-white">Training & Support</h3>
              <p class="text-sm text-text-dim">Team-Onboarding und fortlaufende technische Unterstützung</p>
            </div>
          </Card>
        </div>

        <div class="text-center">
          <Button
            variant="outline"
            tone="neutral"
            size="lg"
            href={getRelativeLocaleUrl(Astro.currentLocale, 'services')}
            client:load
          >
            Alle Services ansehen
          </Button>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="w-full bg-background-dark px-4 py-24 md:px-10 lg:px-20 xl:px-40">
      <div class="mx-auto w-full max-w-5xl">
        <Card variant="surface" size="lg" client:load class="relative overflow-hidden">
          <div slot="default" class="relative z-10 py-12 text-center">
            <div
              class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10"
            >
            </div>

            <h2 class="font-display relative mb-6 text-3xl font-bold text-white md:text-4xl">
              Bereit, Ihre Ticket-Daten privat zu halten?
            </h2>
            <p class="relative mx-auto mb-8 max-w-2xl text-lg text-text-dim">
              Schließen Sie sich Organisationen an, die On-Premise AI für ihre Helpdesk-Automatisierung vertrauen. Beginnen Sie mit
              unserer Dokumentation oder sprechen Sie mit unserem Team.
            </p>
            <div class="relative flex flex-wrap justify-center gap-4">
              <Button
                variant="surface"
                tone="primary"
                size="lg"
                href={getRelativeLocaleUrl(Astro.currentLocale, 'docs')}
                client:load
              >
                Dokumentation lesen
              </Button>
              <Button
                variant="outline"
                tone="primary"
                size="lg"
                href={getRelativeLocaleUrl(Astro.currentLocale, 'services')}
                client:load
              >
                Mit Vertrieb sprechen
              </Button>
            </div>
          </div>
        </Card>
      </div>
    </section>
  </div>
</BaseLayout>