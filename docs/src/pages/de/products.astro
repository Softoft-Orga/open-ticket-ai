---
import { getRelativeLocaleUrl } from 'astro:i18n';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/vue/core/basic/Badge.vue';
import Button from '../../components/vue/core/basic/Button.vue';
import Card from '../../components/vue/core/basic/Card.vue';
import ModalTrigger from '../../components/vue/core/basic/ModalTrigger.vue';
import ContactForm from '../../components/ContactForm.astro';
import { Icon } from 'astro-icon/components';

const title = 'Products - Open Ticket AI';
---

<BaseLayout
  title={title}
  description="Open Ticket AI Product Suite - Automated Ticket Classification"
>
  <div slot="head"></div>

  <div class="min-h-screen bg-background-dark">
    <!-- Hero Section - Live Classification Engine -->
    <section class="relative w-full overflow-hidden px-4 py-20 md:px-10 lg:px-20 xl:px-40">
      <div class="absolute -right-32 -top-32 h-96 w-96 rounded-full bg-primary/10 blur-[120px]">
      </div>
      <div class="mx-auto w-full max-w-7xl">
        <div class="mb-8">
          <Badge tone="primary" client:load>● LIVE CLASSIFICATION ENGINE v2.0</Badge>
        </div>

        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
          <!-- Left Content -->
          <div class="flex flex-col gap-8">
            <h1
              class="font-display text-5xl font-black leading-tight text-white md:text-6xl lg:text-7xl"
            >
              Automatisierte,<br />
              Konsistente Ticket-<br />
              Klassifizierung<br />
              <span class="bg-gradient-to-r from-primary to-cyan-400 bg-clip-text text-transparent">
                In Echtzeit.
              </span>
            </h1>

            <p class="max-w-xl text-xl leading-relaxed text-text-dim">
              Analysieren Sie eingehende Tickets und weisen Sie sofort strukturierte, hierarchische Tags zu. Keine Regeln zu pflegen. Vollständig automatisiert.
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <ModalTrigger
                title="Contact Sales"
                buttonText="VERTRIEB KONTAKTIEREN"
                buttonVariant="surface"
                buttonTone="primary"
                buttonSize="lg"
                client:load
              >
                <ContactForm
                  title="Contact Sales"
                  submitButtonText="Submit"
                  messageLabel="Message"
                  emailLabel="Email"
                  subjectLabel="Subject"
                  emailPlaceholder="your@email.com"
                  messagePlaceholder="How can we help you?"
                  successActionUrl="/success/contact-sales"
                  name="contact-sales"
                />
              </ModalTrigger>
              <Button
                href={getRelativeLocaleUrl(Astro.currentLocale || 'en', 'products/roi-calculator')}
                variant="outline"
                size="lg"
                client:load
              >
                ROI-Rechner ansehen
              </Button>
            </div>
          </div>

          <!-- Right Side - Terminal Demo -->
          <div class="relative">
            <div
              class="overflow-hidden rounded-2xl border border-surface-lighter bg-[#0c0d15] shadow-2xl"
            >
              <div
                class="flex items-center gap-2 border-b border-surface-lighter bg-surface-dark/80 px-4 py-3"
              >
                <div class="flex gap-2">
                  <div class="h-3 w-3 rounded-full bg-danger"></div>
                  <div class="h-3 w-3 rounded-full bg-warning"></div>
                  <div class="h-3 w-3 rounded-full bg-success"></div>
                </div>
                <span class="ml-4 font-mono text-sm text-text-dim">processor_v2.exe</span>
              </div>

              <div class="space-y-6 p-6 font-mono text-sm">
                <div class="space-y-3">
                  <div class="text-muted">ROHE EINGABE</div>
                  <div class="rounded-lg border border-border-dark bg-surface-dark/50 p-4">
                    <p class="mb-2 text-text-1">
                      <span class="text-cyan-glow">Betreff:</span> Login erneut fehlgeschlagen?
