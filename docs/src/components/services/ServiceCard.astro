---
export interface Props {
  title: string;
  price: string;
  features: string[];
  badge: string;
  highlighted?: boolean;
}

const { title, price, features, badge, highlighted = false } = Astro.props;
---

<div class={`rounded-3xl border p-10 flex flex-col transition-all duration-300 ${highlighted ? 'border-primary bg-primary/5 scale-105 shadow-[0_25px_50px_-12px_rgba(100,108,255,0.2)]' : 'border-white/10 bg-gray-800/50 hover:border-primary/30'}`}>
  <div class="mb-6">
    <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 py-1 px-3 text-xs font-bold mb-4">
      {badge}
    </div>
    <h3 class="text-3xl font-bold text-white mb-2">{title}</h3>
    <div class="flex items-baseline gap-1">
      <span class="text-5xl font-black text-white">{price}</span>
      <span class="text-slate-500 text-lg">one-time</span>
    </div>
  </div>

  <ul class="list-none p-0 m-0 mb-10 flex-grow">
    {features.map((feature) => (
      <li class="flex items-start gap-3 mb-4 text-slate-300">
        <svg class="w-5 h-5 text-primary mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>

  <button class={`w-full py-3 px-6 rounded-xl font-semibold transition-all duration-300 cursor-pointer ${highlighted ? 'bg-primary text-white shadow-[0_10px_15px_-3px_rgba(100,108,255,0.3)] border-none hover:bg-primary/90' : 'bg-white/5 text-white border border-white/10 hover:bg-white/10'}`}>
    Get Started
  </button>
</div>
