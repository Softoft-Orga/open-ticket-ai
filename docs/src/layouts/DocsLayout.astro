---
import BaseLayout from './BaseLayout.astro';
import { localizeHref, getLocaleFromPath, type Locale } from '../lib/i18nLinks';

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: { label: string; href?: string }[];
  toc?: { label: string; id: string }[];
}

const { title, description, breadcrumbs = [], toc = [] } = Astro.props;

// Get current locale
const currentLocale = getLocaleFromPath(Astro.url.pathname) as Locale;

// Localize sidebar section links
const sidebarSections = [
  {
    label: 'Products',
    items: [
      { label: 'Overview', link: localizeHref('/products/overview/', currentLocale) },
      { label: 'Prediction API', link: localizeHref('/products/prediction-api/overview/', currentLocale) },
      { label: 'Synthetic Data', link: localizeHref('/products/synthetic-data/synthetic-data-generation/', currentLocale) },
    ]
  },
  {
    label: 'Guides',
    items: [
      { label: 'Quick Start', link: localizeHref('/guides/quick_start/', currentLocale) },
      { label: 'First Pipeline', link: localizeHref('/guides/first_pipeline/', currentLocale) },
      { label: 'Plan Ticket Automation', link: localizeHref('/guides/plan-ticket-automation-project/', currentLocale) },
    ]
  },
  {
    label: 'Users',
    items: [
      { label: 'Installation', link: localizeHref('/users/installation/', currentLocale) },
      { label: 'Plugin Marketplace', link: localizeHref('/users/plugin-marketplace/', currentLocale) },
      { label: 'Configuration Examples', link: localizeHref('/users/config_examples/', currentLocale) },
      { label: 'OTOBO/Znuny Setup', link: localizeHref('/users/plugin-otobo-znuny/setup/', currentLocale) },
    ]
  },
  {
    label: 'Developers',
    items: [
      { label: 'Dependency Injection', link: localizeHref('/developers/dependency_injection/', currentLocale) },
      { label: 'Services', link: localizeHref('/developers/services/', currentLocale) },
      { label: 'Pipeline Code', link: localizeHref('/developers/pipeline_code/', currentLocale) },
      { label: 'Config Rendering', link: localizeHref('/developers/config_rendering/', currentLocale) },
      { label: 'Template Rendering', link: localizeHref('/developers/template_rendering/', currentLocale) },
      { label: 'Testing', link: localizeHref('/developers/testing/', currentLocale) },
      { label: 'Logging', link: localizeHref('/developers/logging/', currentLocale) },
      { label: 'Ticket System Integration', link: localizeHref('/developers/ticket_system_integration/', currentLocale) },
    ]
  },
  {
    label: 'Details',
    items: [
      { label: 'Config Reference', link: localizeHref('/details/config_reference/', currentLocale) },
      { label: 'Template Rendering', link: localizeHref('/details/template_rendering/', currentLocale) },
    ]
  },
  {
    label: 'Blog',
    items: [
      { label: 'Open Ticket AI 1.4 Release', link: localizeHref('/blog/open-ticket-ai-1-4-release/', currentLocale) },
      { label: 'AI in Ticket Systems', link: localizeHref('/blog/ai-in-ticketsystems/', currentLocale) },
      { label: 'Automatic Ticket Labeling', link: localizeHref('/blog/automatic_ticket_labeling/', currentLocale) },
    ]
  },
];

// Localize breadcrumbs
const localizedBreadcrumbs = breadcrumbs.map(crumb => ({
  ...crumb,
  href: crumb.href ? localizeHref(crumb.href, currentLocale) : undefined,
}));
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-background-dark">
    <!-- Breadcrumbs Header -->
    {localizedBreadcrumbs.length > 0 && (
      <div class="border-b border-white/5 bg-[#0f0814]/50 sticky top-16 z-40 backdrop-blur-sm shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 h-12 flex items-center justify-between">
          <div class="flex items-center text-[10px] gap-2 overflow-hidden">
            {localizedBreadcrumbs.map((crumb, i) => (
              <>
                {crumb.href ? (
                  <a href={crumb.href} class="text-slate-500 hover:text-white transition-colors whitespace-nowrap">{crumb.label}</a>
                ) : (
                  <span class="text-primary-light font-bold truncate">{crumb.label}</span>
                )}
                {i < localizedBreadcrumbs.length - 1 && (
                  <span class="text-xs text-slate-700">â€º</span>
                )}
              </>
            ))}
          </div>
          <div class="hidden sm:flex items-center gap-4">
            <a href="https://github.com/Softoft-Orga/open-ticket-ai" target="_blank" class="text-slate-500 hover:text-white flex items-center gap-1.5 text-[10px] font-bold">
              <span class="text-sm">âš¡</span>
              GitHub
            </a>
          </div>
        </div>
      </div>
    )}

    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 flex flex-col lg:flex-row gap-12">
      <!-- Desktop Sidebar - Left -->
      <aside class="hidden lg:block w-72 flex-shrink-0 sticky top-32 h-[calc(100vh-160px)] overflow-y-auto pr-4" style="scrollbar-width: thin; scrollbar-color: #374151 transparent;">
        <nav>
          {sidebarSections.map(section => (
            <div class="mb-6">
              <h3 class="text-[11px] font-black uppercase tracking-widest text-slate-500 mb-2 px-3">{section.label}</h3>
              <ul class="space-y-1">
                {section.items.map(item => (
                  <li>
                    <a
                      href={item.link}
                      class="block px-3 py-1.5 text-xs text-slate-400 hover:text-white hover:bg-white/5 rounded-md transition-all"
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </nav>
      </aside>

      <!-- Main Content Area -->
      <main class="flex-1 min-w-0">
        <div class="max-w-4xl mx-auto">
          <article class="prose prose-invert prose-lg max-w-none
            prose-headings:text-white
            prose-h1:text-4xl prose-h1:font-bold prose-h1:mb-6 prose-h1:mt-0
            prose-h2:text-2xl prose-h2:font-bold prose-h2:mt-8 prose-h2:mb-4
            prose-h3:text-xl prose-h3:font-bold prose-h3:mt-6 prose-h3:mb-3
            prose-p:mb-4 prose-p:leading-relaxed prose-p:text-gray-300
            prose-a:text-primary-light prose-a:no-underline hover:prose-a:text-primary hover:prose-a:underline
            prose-code:bg-surface-lighter prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:text-primary-light
            prose-pre:bg-surface-lighter prose-pre:border prose-pre:border-white/10 prose-pre:p-4 prose-pre:rounded-lg prose-pre:overflow-x-auto prose-pre:mb-4
            prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-gray-400 prose-blockquote:my-4
            prose-ul:mb-4 prose-ul:ml-6 prose-ul:space-y-2 prose-ul:list-disc
            prose-ol:mb-4 prose-ol:ml-6 prose-ol:space-y-2 prose-ol:list-decimal
            prose-li:leading-relaxed prose-li:text-gray-300
            prose-strong:text-white prose-strong:font-semibold
            prose-img:rounded-lg prose-img:my-6
            prose-table:w-full prose-table:border-collapse prose-table:my-6
            prose-th:bg-surface-dark prose-th:text-white prose-th:font-semibold prose-th:p-3 prose-th:border prose-th:border-white/10
            prose-td:text-gray-300 prose-td:p-3 prose-td:border prose-td:border-white/10
          ">
            <slot />
          </article>
        </div>
      </main>

      <!-- Table of Contents - Right -->
      {toc.length > 0 && (
        <aside class="hidden xl:block w-56 flex-shrink-0 sticky top-32 h-fit">
          <h4 class="text-[10px] font-black uppercase tracking-widest text-slate-500 mb-6 px-4">On this page</h4>
          <nav class="flex flex-col gap-1 border-l border-white/5">
            {toc.map((item) => (
              <a
                href={`#${item.id}`}
                class="px-4 py-1.5 text-slate-400 hover:text-white border-l-2 border-transparent hover:border-primary transition-all text-[11px] font-medium"
              >
                {item.label}
              </a>
            ))}
          </nav>

          <div class="mt-12 px-4">
            <div class="p-4 rounded-xl bg-gradient-to-br from-primary/10 to-surface-dark border border-white/5 relative overflow-hidden group">
              <div class="relative z-10">
                <span class="text-primary mb-2 text-xl">ðŸ’¬</span>
                <div class="text-[10px] font-black text-white uppercase mb-1">Support Discord</div>
                <p class="text-[9px] text-slate-500 leading-tight mb-3">Get help from the community.</p>
                <button class="w-full py-1.5 bg-white/5 rounded text-[9px] font-bold text-slate-300 hover:bg-white/10 transition-colors">Join Server</button>
              </div>
            </div>
          </div>
        </aside>
      )}
    </div>
  </div>
</BaseLayout>
