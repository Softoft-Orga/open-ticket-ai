---
import { getCollection } from 'astro:content';
import NavBar from '../components/vue/core/navigation/NavBar.vue';
import FooterComponent from '../components/vue/core/navigation/FooterComponent.vue';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const gaIds = ['AW-474755810', 'G-FBWC3JDZJ4'];

// Load site configuration for current locale
const currentLocale = (Astro.currentLocale ?? 'en').toLowerCase();
const allSiteConfigs = await getCollection('site');
const siteConfig = allSiteConfigs.find(entry => entry.id.toLowerCase().startsWith(currentLocale));
const navLinks = siteConfig?.data.nav || [];
const footerData = siteConfig?.data.footer;
const logoUrl = siteConfig?.data.meta.logoUrl;
const ctaLabel = 'Get Started';
const ctaUrl = '/products/';
---

<!doctype html>
<html lang={Astro.currentLocale || 'en'} data-locale={Astro.currentLocale || 'en'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Analytics lazy loading -->
    <script is:inline define:vars={{ gaIds }}>
      (() => {
        let loaded = false;
        function load() {
          if (loaded) return;
          loaded = true;
          const s = document.createElement('script');
          s.src = 'https://www.googletagmanager.com/gtag/js?id=' + gaIds[0];
          s.async = true;
          document.head.appendChild(s);
          window.dataLayer = window.dataLayer || [];
          function gtag(...args) {
            dataLayer.push(...args);
          }
          gtag('js', new Date());
          gaIds.forEach(id => {
            gtag('config', id, { send_page_view: false });
          });
        }
        if ('requestIdleCallback' in window) {
          requestIdleCallback(load, { timeout: 4000 });
        } else {
          setTimeout(load, 2000);
        }
        let fired = false;
        ['scroll', 'pointerdown', 'keydown', 'touchstart'].forEach(ev => {
          addEventListener(
            ev,
            function () {
              if (fired) return;
              fired = true;
              load();
            },
            { passive: true, once: true }
          );
        });
      })();
    </script>
  </head>
  <body class="font-sans">
    <NavBar client:load links={navLinks} logoUrl={logoUrl} ctaLabel={ctaLabel} ctaUrl={ctaUrl} />
    <slot />
    <FooterComponent client:load footerData={footerData} />
  </body>
</html>
